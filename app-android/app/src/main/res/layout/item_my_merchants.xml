<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/ll_applyid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/applyid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            android:text="进件ID：" />

        <TextView
            android:id="@+id/tv_applyid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            android:layout_marginLeft="2dp"
            tools:text="2016-01-01" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            tools:text="对公" />

    </LinearLayout>


    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_applyid"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            tools:text="上海食品公司" />

        <!--<TextView-->
            <!--android:id="@+id/merchant_code"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tv_store_name"-->
            <!--android:text="商户号："-->
            <!--android:textColor="@color/black_color2"-->
            <!--android:textSize="17sp" />-->

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_store_name"
            android:text="地址："
            android:textColor="@color/black_color2"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_store_name"
            android:layout_toRightOf="@+id/address"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            tools:text="上海市普陀区上海市普陀区" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:text="手机："
            android:textColor="@color/black_color2"
            android:textSize="17sp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_merchant_code"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBaseline="@+id/merchant_code"-->
            <!--android:layout_toRightOf="@+id/merchant_code"-->
            <!--android:ellipsize="end"-->
            <!--android:singleLine="true"-->
            <!--android:textColor="@color/black_color2"-->
            <!--android:textSize="17sp"-->
            <!--tools:text="643523422345235" />-->


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone"
            android:layout_toRightOf="@+id/phone"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            tools:text="13000000000" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            android:text="进件时间：" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_toRightOf="@+id/date"
            android:textColor="@color/black_color2"
            android:textSize="17sp"
            tools:text="2016-01-01 12:13" />

    </RelativeLayout>

</RelativeLayout>