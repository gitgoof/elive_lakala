<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/text_white"
              android:orientation="vertical">

    <include
        android:id="@+id/rl_header_title"
        layout="@layout/common_header_layout">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 商户真实性核查 -->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="商户真实性核查"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_mer_info_truth"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--商户成熟度-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="商户成熟度"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_mer_mature"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--商户等级-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="商户等级"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_mer_level"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!-- 商户主营 -->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="商户主营"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_mer_main_sale"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--商户类别-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="商户类别"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_mer_class"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--商铺位置-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="商铺位置"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_mer_shop_area"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--产品类型
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="产品类型"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_product_class"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>
            -->

            <!--商户已有产品-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="商户已有产品"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_card_app_type"
                    style="@style/spinner_mer_value_style_no_input"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--其他pos优势 -->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="其他POS优势"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_other_pos_advance"
                    style="@style/spinner_mer_value_style_no_input"/>

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--电子平台绑定结果-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="电子平台绑定结果"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_bind_ele_platform_result"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--电子平方台未绑定原因-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="电子平方台未绑定原因"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_no_bind_ele_platform_reason"
                    style="@style/spinner_mer_value_style_no_input"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <!--是否换签-->
            <LinearLayout
                style="@style/ll_mer_edit_header_style">

                <TextView
                    style="@style/text_mer_title_style"
                    android:text="是否换签"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinner_is_exchange_sign"
                    style="@style/spinner_mer_value_style"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_divide_bg"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pre_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_submit_bg"
                    android:textColor="@color/text_white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="上一步"/>

                <Button
                    android:id="@+id/btn_submit_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/btn_submit_bg"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:text="下一步"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
