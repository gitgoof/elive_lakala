                        <ImageView
                            android:layout_width="37dp"
                            android:layout_height="35dp"
                            android:layout_margin="11dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/qcode_detail_yl" />
                        <ImageView
                            android:layout_width="37dp"
                            android:layout_height="35dp"
                            android:layout_margin="11dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/qcode_detail_lkl" />
                    </LinearLayout>


                    <ImageView
