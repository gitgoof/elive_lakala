                        android:layout_width="215dp"
                        android:layout_height="35dp"
                       android:layout_centerHorizontal="true"
                        android:background="@drawable/qcode_detail_phone"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                </RelativeLayout>

