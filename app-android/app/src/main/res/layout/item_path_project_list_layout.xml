<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/rl_left"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_item_path_project_start"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_plan_arrows_green_start" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/item_path_project_white_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="2dp"
            android:textSize="14sp"
            android:text="起点"/>

        <ImageView
            android:id="@+id/img_item_path_project_end"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_plan_arrows_green_end" />

    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/rl_left"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_path_project_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:maxLines="1"
                android:text="上海食品中江路店"/>
            <TextView
                android:id="@+id/tv_path_project_storecore"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="(3202341)"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_path_project_storeaddress"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="地址:上海市洪山区中江路32号"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_3"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"></View>
</RelativeLayout>