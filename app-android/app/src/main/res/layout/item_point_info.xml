<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_task_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="9dp"
    android:paddingLeft="9dp"
    android:background="@color/white"
    android:layout_marginBottom="4dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="6dp">

        <LinearLayout
            android:id="@+id/rl_task_info_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_biz_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=""
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_task_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:text="终端申请"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_begin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/btn_search_text_color"
                android:textSize="14sp" />

        </LinearLayout>


        <!-- 商户相关信息  -->
        <RelativeLayout
            android:id="@+id/rl_task_info_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:id="@+id/rl_task_info_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@drawable/store"
                        android:drawablePadding="3dp"
                        android:text="网点名称"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_item_point_task_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="未处理"
                        android:textColor="#00A8EA"
                        android:textSize="14sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_shop_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="3dp"
                    android:text="网点地址"
                    android:textColor="@color/btn_search_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_shop_telno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="3dp"
                    android:text="联系方式"
                    android:textColor="@color/btn_search_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:text=""
                android:textColor="@color/viewfinder_laser"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_dot_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_point_info"
                android:gravity="center"
                android:padding="3dp"
                android:text="单网点商户"
                android:textColor="#F19530"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/item_point_info"
                android:gravity="center"
                android:padding="3dp"
                android:text="单终端商户"
                android:textColor="#F19530"
                android:textSize="12sp" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_task_info_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_finish_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/time"
                android:drawablePadding="3dp"
                android:text="还有一天截止时间"
                android:textColor="@color/btn_search_text_color"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_finish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:drawablePadding="3dp"
                android:text="2016-3-5"
                android:textColor="#00A8EA"
                android:textSize="15sp" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F3F8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tv_item_point_info_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="查看详情"
            android:textColor="#0096FA"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_point_info_begin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="设为起点"
            android:textColor="#00BA32"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="移除"
            android:textColor="#575757"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>