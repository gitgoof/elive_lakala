<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <include layout="@layout/common_header_layout" />

    <!--FrameLayout-->
    <FrameLayout
        android:id="@+id/fl_home_main_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--底部的RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rb_home_main"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_main_selector"
            android:text="主页"/>

        <RadioButton
            android:id="@+id/rb_home_contact"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_contact_selector"
            android:text="通讯录"/>

        <RadioButton
            android:id="@+id/rb_home_session"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_session_selector"
            android:text="会话"/>

        <RadioButton
            android:id="@+id/rb_home_my"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_user_selector"
            android:text="我的"/>


    </RadioGroup>


</LinearLayout>
