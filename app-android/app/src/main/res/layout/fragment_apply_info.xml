<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <TextView
        android:id="@+id/applyid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="进件ID"
        android:textColor="@color/black_color2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_applyid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/applyid"
        android:layout_marginLeft="105dp"
        android:textColor="@color/black_color2"
        android:textSize="17sp"
        tools:text="张三" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_applyid"
        android:layout_marginTop="10dp"
        android:background="@color/gray_line" />


    <TextView
        android:id="@+id/apply_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_marginTop="10dp"
        android:text="进件类型"
        android:textColor="@color/black_color2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_apply_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/apply_type"
        android:layout_marginLeft="105dp"
        android:textColor="@color/black_color2"
        android:textSize="17sp"
        tools:text="43532413342312" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_apply_type"
        android:layout_marginTop="10dp"
        android:background="@color/gray_line" />

    <TextView
        android:id="@+id/process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_marginTop="10dp"
        android:text="进件状态"
        android:textColor="@color/black_color2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/process"
        android:layout_marginLeft="105dp"
        android:textColor="@color/black_color2"
        android:textSize="17sp"
        tools:text="43532413342312" />

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_process"
        android:layout_marginTop="10dp"
        android:background="@color/gray_line" />

    <TextView
        android:id="@+id/result_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v3"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="BMCP编号"
        android:textColor="@color/black_color2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_result_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/result_id"
        android:layout_marginLeft="105dp"
        android:textColor="@color/black_color2"
        android:textSize="17sp"
        tools:text="广发银行" />



    <LinearLayout
        android:id="@+id/linear_apply_info_v6"
        android:layout_below="@+id/tv_result_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/v6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/linear_apply_info_v6_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/result_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="BMCP描述"
                android:textColor="@color/black_color2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_result_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_color2"
                android:textSize="17sp"
                tools:text="广发银行" />

        </RelativeLayout>

        <View
            android:id="@+id/v7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_result_desc"
            android:background="@color/gray_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/merchant_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_apply_info_v6"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="商户号"
        android:textColor="@color/black_color2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_merchant_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/merchant_id"
        android:layout_marginLeft="105dp"
        android:textColor="@color/black_color2"
        android:textSize="17sp"
        tools:text="广发银行" />

    <View
        android:id="@+id/v8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_merchant_id"
        android:layout_marginTop="10dp"
        android:background="@color/gray_line" />


    <TextView
        android:id="@+id/stop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v8"
        android:layout_marginTop="10dp"
        android:text="网点号"
        android:textColor="@color/black_color2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_stop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/stop_id"
        android:layout_marginLeft="105dp"
        android:textColor="@color/black_color2"
        android:textSize="17sp"
        tools:text="广发银行" />

    <View
        android:id="@+id/v9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/stop_id"
        android:layout_marginTop="10dp"
        android:background="@color/gray_line" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v9"
        android:layout_marginTop="10dp"
        android:text="申请时间"
        android:textColor="@color/black_color2"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/time"
        android:layout_marginLeft="105dp"
        android:textColor="@color/black_color2"
        android:textSize="17sp"
        tools:text="广发银行" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/time"
        android:layout_marginTop="10dp"
        android:background="@color/gray_line" />

</RelativeLayout>

