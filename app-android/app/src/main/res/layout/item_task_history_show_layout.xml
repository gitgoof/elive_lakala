<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_bg"/>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_item_task_history_taskcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8999988989"/>

        <TextView
            android:id="@+id/tv_item_task_history_tasktype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="终端申请"/>
        <TextView
            android:id="@+id/tv_item_task_history_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-3-5"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_task_history_storename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/store"
            android:drawablePadding="8dp"
            android:text="上海食品中江路店"/>

        <TextView
            android:id="@+id/tv_item_task_history_taskstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已处理"/>

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_task_history_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="8dp"
            android:text="上海市洪山区中江路32号"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_item_task_history_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:text="15299998888"/>
        <TextView
            android:id="@+id/tv_item_task_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="8dp"
            android:textColor="@color/blue"
            android:text="2016-3-8"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:id="@+id/linear_item_task_history_bottomshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:tag="根据需求隐藏">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="8dp"
            android:visibility="invisible"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_point_info"
            android:textColor="#F19530"
            android:padding="3dp"
            android:text="单网点商户"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:background="@drawable/item_point_info"
            android:textColor="#F19530"
            android:text="单终端商户"/>
    </LinearLayout>

</LinearLayout>