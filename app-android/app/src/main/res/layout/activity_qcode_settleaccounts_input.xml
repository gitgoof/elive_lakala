<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bank_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout" />

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:background="@color/gray_bg3">

        <ImageView
            android:id="@+id/img_progress"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入账户名"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_settle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:background="@null"
                        android:hint="请输入开户姓名"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v1"
                        android:layout_marginTop="10dp"
                        android:text="卡号       "
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入收款卡号"
                        android:inputType="number"
                        android:maxLength="32"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="50dp"
                        android:textSize="17sp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_scan_card_number"
                        android:layout_width="17dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/saoma"
                       />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_line" />


                <LinearLayout
                    android:id="@+id/liner_legalperson_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
               >
                    <TextView
                        android:id="@+id/tv_legalperson_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v1"
                        android:layout_marginTop="10dp"
                        android:text="法人姓名"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_legalperson_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入法人姓名"
                        android:maxLength="30"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="50dp"
                        android:textSize="17sp"
                        android:layout_weight="1"
                        />

                </LinearLayout>
                <View
                    android:id="@+id/liner_legalperson_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_line"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/id_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v2"
                        android:layout_marginTop="10dp"
                        android:text="身份证号"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_id_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/id_number"
                        android:layout_marginLeft="50dp"
                        android:background="@null"
                        android:hint="请输入身份证号码"
                        android:inputType="text"
                        android:maxLength="18"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/id_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v3"
                        android:layout_marginTop="10dp"
                        android:text="身份证有效期"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_id_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:hint="请选择日期"
                        android:textColor="@color/black_color"
                        android:textSize="17sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/btn_id_perpetual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_search_bg"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/white"
                        android:text="长期"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v4"
                        android:layout_marginTop="10dp"
                        android:text="开户行"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_select_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/bank_name"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/icon_setting_item_left_arrow"
                        android:hint="请选择开户银行"
                        android:textColor="@color/black_color"
                        android:textSize="17sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>


