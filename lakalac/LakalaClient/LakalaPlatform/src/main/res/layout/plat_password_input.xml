<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20">

    <TextView
        android:id="@+id/id_title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_blue_3b4a78"
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold" />

    <com.lakala.platform.swiper.mts.paypwd.PayPwdInputView
        android:id="@+id/id_password"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_80"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@color/gray_e6e7e9"
        android:inputType="textPassword"
        android:singleLine="true"
        app:horizontalSpace="10" />


    <TextView
        android:id="@+id/id_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:textColor="@color/color_gray_727485"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/miss_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="@string/plat_forget_password_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_blue_50bdef"
        android:textSize="@dimen/font_size_small" />


</LinearLayout>