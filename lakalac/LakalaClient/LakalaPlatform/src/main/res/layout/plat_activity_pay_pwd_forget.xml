<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white_eceff6"
              android:clickable="true"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_40"
        android:text="@string/plat_password_security_miss_text_prompt1"
        android:textColor="@color/gray_727485"
        android:textSize="@dimen/font_size_normal"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60"
        android:gravity="center"
        android:text="@string/plat_password_security_phone_text"
        android:textColor="@color/gray_727485"
        android:textSize="@dimen/font_size_normal"/>

    <ImageButton
        android:id="@+id/id_btn_servicephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/phone_call_button_selector"
        android:contentDescription="@null"/>

</LinearLayout>
