<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/bluetooth_loading_finish_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bluetooth_hint"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:textSize="@dimen/font_size_normal"/>

            <LinearLayout
                android:id="@+id/bluetooth_search_ll"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_20">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:text="可连接的刷卡器:"
                        android:textSize="@dimen/font_size_normal"/>

                    <TextView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="搜索其他刷卡器"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_size_normal"/>

                </LinearLayout>

                <com.lakala.ui.module.CustomNestListView
                    android:id="@+id/list_view"
                    android:listSelector="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:id="@+id/bluetooth_id_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateDrawable="@drawable/ui_frame_loading"/>

            </LinearLayout>

            <include layout="@layout/plat_common_button"/>

            <TextView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/dimen_20"
                android:text="使用说明"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_small"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bluetooth_loading_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_20"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蓝牙刷卡器连接中..."
                android:textSize="@dimen/font_size_normal"/>
            <ImageView
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/flash_insert_card_reader"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>