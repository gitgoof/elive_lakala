<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/plat_activity_input_verifycode_lable_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_5e5e5e"
        android:textSize="@dimen/dimen_30"
        android:layout_margin="@dimen/dimen_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:background="@drawable/ui_white_bg_gray_border">

        <com.lakala.ui.component.ClearEditText
            style="@style/edit_text_num_style"
            android:id="@+id/plat_activity_input_verifycode_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingRight="@dimen/dimen_20"
            android:layout_weight="1"
            android:hint="@string/ui_input_your_verifycode"/>

        <Button
            android:id="@+id/plat_activity_input_get_verifycode_button"
            android:layout_width="@dimen/dimen_264"
            android:layout_height="match_parent"
            android:textColor="@color/color_white_ffffff"
            android:background="@drawable/ui_bg_light_blue_selector"
            android:textSize="@dimen/dimen_30"
            android:text="@string/ui_get_verifycode" />

    </LinearLayout>

</LinearLayout>