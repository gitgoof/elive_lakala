<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/app_background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:visibility="gone"
        android:id="@+id/sv_first_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/seperator"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.lakala.ui.component.LabelEditText
                    android:id="@+id/labelEditText_idcard"
                    style="@style/labeledittext_sytle_no_rightpadding"
                    android:paddingRight="10dp"
                    app:isText="true"
                    app:labelText="身份证号"
                    app:text="21041********1254" />

                <View style="@style/seperator" />

                <com.lakala.shoudan.component.TakePicView
                    android:id="@+id/pv_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/seperator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View style="@style/seperator" />

                <com.lakala.ui.component.LabelEditText
                    android:id="@+id/labelEditText_accountNo"
                    style="@style/labeledittext_sytle_no_rightpadding"
                    android:paddingRight="10dp"
                    app:isText="true"
                    app:labelText="结算卡号"
                    app:text="62148******1625" />

                <View style="@style/seperator" />

                <com.lakala.shoudan.component.TakePicView
                    android:id="@+id/pv_paycard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View style="@style/seperator" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_submit_audit"
                style="@style/btn_top_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="升级" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/sv_twice_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                style="@style/seperator"
                android:layout_marginTop="8dp" />

            <com.lakala.ui.component.LabelEditText
                android:id="@+id/labelEditText_branch"
                style="@style/labeledittext_sytle_for_shoudan"
                android:visibility="gone"
                app:hint="@string/branch_hint"
                app:isText="true"
                app:labelText="@string/branch"
                app:rightArrowVisibility="VISIBLE"
                app:rightIconSrc="@drawable/btn_arrow_go" />


            <com.lakala.ui.component.LabelEditText
                android:id="@+id/let_licence_num"
                style="@style/labeledittext_sytle_no_rightpadding"
                app:hint="请输入营业执照号码"
                app:labelText="营业执照号码" />

            <View style="@style/seperator" />

            <com.lakala.shoudan.component.TakePicView
                android:id="@+id/pv_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/seperator" />

            <com.lakala.shoudan.component.TakePicView
                android:id="@+id/pv_door"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/seperator" />

            <com.lakala.shoudan.component.TakePicView
                android:id="@+id/pv_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_update"
                style="@style/btn_top_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="升级" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
