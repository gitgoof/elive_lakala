<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_distance_level_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="积分余额(分)" />

        <TextView
            android:id="@+id/query_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="查询积分" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_integral_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入积分余额"
            android:singleLine="true"
            android:inputType="number"
            android:padding="@dimen/common_distance_level_1"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_distance_level_1"
            android:layout_marginRight="@dimen/common_distance_level_1"
            android:text="可兑换" />

        <TextView
            android:id="@+id/can_exchange_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_distance_level_1"
            android:text="￥0.00" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_distance_level_1"
        android:text="@string/integral_exchange_rate"
        android:textColor="@color/gray_666666" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/common_distance_level_1"
        android:text="请选择代金券" />


    <TextView
        android:id="@+id/voucher_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_distance_level_1"
        android:text="@string/voucher_explain" />

</LinearLayout>
