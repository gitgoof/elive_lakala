<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_seperator"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/edit_bg" />

    <com.lakala.shoudan.component.ScrollViewContainer
        android:id="@+id/svc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="40dp">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_lkllogo" />

                        <TextView
                            android:id="@+id/tv_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/login_reigster"
                            android:textColor="@color/text_green_blue_selector"
                            android:textSize="@dimen/medium_text_size" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/linearLayout_account_pwd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">


                        <ImageView
                            android:id="@+id/id_phone_text"
                            style="@style/shoudan_text_medium_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
                            android:gravity="center"
                            android:src="@drawable/icon_username" />

                        <EditText

                            android:id="@+id/id_phone_edit"
                            style="@style/combination_right_edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@id/id_phone_text"
                            android:layout_alignTop="@id/id_phone_text"
                            android:layout_toRightOf="@id/id_phone_text"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="@string/phone_title0"
                            android:paddingRight="10dp"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/combination_text_edit_margin_left"
                            android:textCursorDrawable="@null" />

                        <View
                            android:id="@+id/divider"
                            style="@style/seperator"
                            android:layout_alignLeft="@id/id_phone_text"
                            android:layout_below="@id/id_phone_edit"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp" />


                        <ImageView
                            android:id="@+id/id_passwor_text"
                            style="@style/shoudan_text_medium_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/divider"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
                            android:gravity="center"
                            android:src="@drawable/icon_inputpw" />

                        <com.lakala.platform.common.securitykeyboard.SecurityEditText
                            android:id="@+id/id_passwor_edit"
                            style="@style/combination_right_edittext_style"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@id/id_passwor_text"
                            android:layout_alignTop="@id/id_passwor_text"
                            android:layout_toRightOf="@id/id_passwor_text"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingRight="10dp"
                            android:hint="@string/plz_input_pwd"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/combination_text_edit_margin_left"
                            android:textCursorDrawable="@null" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/login"
                            style="@style/btn_top_line"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/login" />
                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
                        android:layout_marginRight="@dimen/combination_text_edit_margin_left"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/keep_phone"
                            style="@style/mycheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="1dp"
                            android:paddingRight="1dp"
                            android:text="@string/check_keep_acount"
                            android:textColor="@color/combination_title_text_color"
                            android:textSize="@dimen/small_text_size" />

                        <TextView
                            android:id="@+id/find_login_PW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="10dip"
                            android:text="@string/find_login_password"
                            android:textColor="@color/text_green_blue_selector"
                            android:textSize="@dimen/small_text_size" />
                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/iv_more_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_loginpage_ad" />

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_more_pic"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/x3"
                        android:src="@drawable/pic_up" />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_nav_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_nav_blue"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pic_return" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/pic_login_bottom" />


                </LinearLayout>
            <!--<com.lakala.platform.common.securitykeyboard.SecurityEditText-->
                <!--android:id="@+id/test"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="70dp"-->
                <!--android:focusable="true"-->
                <!--android:background="#ff0000"-->
                <!--/>-->
            </LinearLayout>

        </ScrollView>

    </com.lakala.shoudan.component.ScrollViewContainer>
</LinearLayout>