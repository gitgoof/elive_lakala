            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/font_gray_two"
            android:text="商户名称:"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|right"
            android:layout_height="match_parent" />
