            android:textSize="14sp"
            android:text="西毒欧阳锋"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/font_gray_two"
        />
</LinearLayout>