<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    style="@style/app_background_white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/prompt_text"
        style="@style/shoudan_text_medium_black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:text="短信验证"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="5dip" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_edit_with_no_corner"
        android:orientation="horizontal" >

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/code_edit"
            style="@style/shoudan_text_medium_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:hint="@string/smscode"
            android:inputType="number|textPassword" >
        </EditText>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/box"/>
        <com.lakala.ui.component.CaptchaTextView
            android:layout_marginRight="10dp"
            android:id="@+id/get_btn"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/text_get_captcha_color_selector" />
    </LinearLayout>

    <TextView
        android:id="@+id/info"
        style="@style/shoudan_text_small_black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="已向186****4034发送短信验证码，请填写正确的验证码，有效期10分钟" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            style="@style/btn_top_line"
            android:text="@string/cancel"
            />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sure"
            android:layout_weight="1"
            style="@style/btn_top_line"
            android:text="@string/ok"
            />
        
    </LinearLayout>

</LinearLayout>