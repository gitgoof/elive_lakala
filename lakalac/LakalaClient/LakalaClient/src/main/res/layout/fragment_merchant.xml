<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"

    >
    <LinearLayout
        android:id="@+id/mer_frag_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x8"
        android:paddingTop="9dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.lakala.ui.component.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x15"
            android:scaleType="fitXY"
            android:src="@drawable/btn_portrait"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/x4">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_merchant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_666666"
                        android:textSize="@dimen/x14"
                        tools:text="姓名" />
                    <TextView
                        android:id="@+id/tv_lev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/x10"
                        android:text="富家" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_666666"
                    android:layout_marginTop="@dimen/x5"
                    android:textSize="@dimen/x12"
                    android:text="189****1185" />

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_merchant_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                   >
                <TextView
                    android:id="@+id/tv_merchant_more"
                    android:layout_width="@dimen/x60"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/gray_666666"
                    android:textSize="@dimen/x14"
                    android:drawablePadding="@dimen/x8"
                    android:paddingRight="@dimen/x15"

                    android:drawableRight="@drawable/btn_arrow_go_gray"
                     />
            </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_merchat_hint"
        style="@style/style_twelve_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange_FF8308"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:text="@string/merchant_info_commit_not_sucess_hint1"
        android:textSize="@dimen/x10"
        android:visibility="gone"
        android:layout_marginTop="@dimen/x8"
        />
    </LinearLayout>
    <View style="@style/seperator"

        android:layout_marginLeft="@dimen/x15"/>


    <LinearLayout
        android:id="@+id/ll_merchant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <LinearLayout
            android:id="@+id/mer_frag_change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x10"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/common_distance_level_1"
            android:paddingBottom="@dimen/x10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/aa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_666666"
                        android:textSize="@dimen/x12"
                        android:text="店铺名称" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x25"
                    android:textColor="@color/gray_999999"
                    android:layout_below="@+id/aa"
                    android:textSize="@dimen/x10"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/x10"
                    android:text="限一次" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_name_change"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:paddingLeft="@dimen/x20"
                >
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/x14"
                    android:text="修改" />
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:src="@drawable/btn_arrow_go_gray"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/x15"
            style="@style/seperator" />

        <LinearLayout
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/common_distance_level_1"
            android:paddingBottom="@dimen/x10"
            android:paddingTop="@dimen/x10">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_666666"
                    android:textSize="@dimen/x12"
                    android:text="收款账户" />

                <LinearLayout
                    android:id="@+id/ll_phone_change"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="@dimen/x20"
                    >
                    <TextView
                        android:id="@+id/tv_bank_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/x14"
                        android:text="修改" />
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"
                        android:src="@drawable/btn_arrow_go_gray"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/tv_hint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hint"
                    style="@style/style_twelve_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_FF8308"
                    android:text="@string/merchant_info_commit_not_sucess_hint1"
                    android:visibility="gone"
                    android:textSize="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                     />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
    <View style="@style/seperator" />
</LinearLayout>