<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:apps="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/app_background_white"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
         <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="@dimen/content_margin_actionbar"
            android:id="@+id/selection_start_date"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/order_item_height"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/combination_text_edit_margin_left"
             >

            <TextView
                style="@style/combination_left_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:text="起止日期" />

            <TextView
                android:id="@+id/tv_selection_start_date"
                style="@style/combination_right_edittext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/tv_to"
                tools:text="2014-9-13"
                android:gravity="right" />
            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"
                style="@style/combination_right_edittext_style"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_selection_end_date"
                />

             <TextView
                 android:id="@+id/tv_selection_end_date"
                 style="@style/combination_right_edittext_style"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="15dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 tools:text="2014-9-13"
                 android:gravity="right"/>


         </RelativeLayout>
        <ImageView
            android:id="@+id/divide_line"
            android:visibility="visible"
            style="@style/combination_seperator_style"/>

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/selection_type"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/order_item_height"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:layout_gravity="center_vertical"
                style="@style/combination_left_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择分类" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_selection_type"
                style="@style/combination_right_edittext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="请选择交易类型"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_arrow_go" />
        </LinearLayout>

        
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/query_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/btn_top_line"
        android:layout_marginTop="30dp"
        android:text="@string/query_next" />
    
    <LinearLayout
       android:id="@+id/no_record_icon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_gravity="center_horizontal"
       android:gravity="center_horizontal"
       android:visibility="gone"
       android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_no_records"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/combination_title_text_color"
            android:text="无交易记录"
            android:textSize="@dimen/big_text_size"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layout_result"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共笔交易"
                android:id="@+id/tv_total_count"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总交易额:元"
                android:id="@+id/tv_total_amount"
                android:layout_alignParentRight="true"
                />
            
        </RelativeLayout>
        <ListView
            android:background="@color/white"
            android:id="@+id/record_detail_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
    </LinearLayout>

</LinearLayout>