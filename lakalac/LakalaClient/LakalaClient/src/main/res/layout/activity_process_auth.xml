<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            style="@style/seperator"
            />
        <TextView
            style="@style/combination_little_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:text="身份信息"/>
        <View
            style="@style/seperator"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            style="@style/combination_item_style"
            android:paddingLeft="@dimen/common_distance_level_1"
            android:paddingRight="@dimen/common_distance_level_1"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/combination_left_textview_style"
                android:text="姓名"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"/>

            <EditText
                android:id="@+id/wallet_transfer_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                style="@style/combination_right_edittext_style"
                android:hint="@string/user_name_error4"/>
        </LinearLayout>
        <View
            android:paddingLeft="@dimen/common_distance_level_1"
            style="@style/seperator"/>
        <LinearLayout
            style="@style/combination_item_style"
            android:paddingLeft="@dimen/common_distance_level_1"
            android:paddingRight="@dimen/common_distance_level_1"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/combination_left_textview_style"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:text="身份证号"/>
            <EditText
                android:id="@+id/idCardNo"
                style="@style/combination_right_edittext_style"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_weight="1"
                android:hint="@string/user_IDcard_error2"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>

        <View style="@style/seperator"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_distance_level_1">
            <TextView
                style="@style/combination_little_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/common_distance_level_1"
                android:text="银行卡信息"/>
            <TextView
                android:id="@+id/support_bank_list"
                android:layout_width="@dimen/x100"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/watch_support_bank"
                android:onClick="onMyClick"
                android:clickable="true"
                android:textSize="@dimen/dimen_24"
                android:textColor="@color/main_nav_blue"
                android:layout_marginRight="@dimen/common_distance_level_1"
                android:paddingTop="@dimen/common_distance_level_1"/>
        </LinearLayout>

        <View
            style="@style/seperator"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <com.lakala.ui.component.LabelEditText
                    style="@style/labeledittext_sytle_no_rightpadding"
                    android:id="@+id/let_bank_card_num"
                    app:labelText="银行卡号"
                    android:textSize="@dimen/medium_text_size"
                    app:rightArrowVisibility="INVISIBLE"
                    app:hint="@string/bank_cridit_phone1"/>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_details_nol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:paddingRight="@dimen/common_distance_level_1"
                        android:onClick="onMyClick"
                        android:clickable="true"
                        android:src="@drawable/bg_btn_autu_details"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/card_type"
                style="@style/combination_right_edittext_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x15"
                android:textSize="@dimen/x12"
                android:textColor="@color/font_gray_three2"
                android:layout_marginRight="@dimen/x56"
                android:gravity="right|center_vertical"
                android:duplicateParentState="true"
                android:background="@color/white" >
            </TextView>

            <View
                style="@style/seperator"
                android:layout_marginLeft="@dimen/common_distance_level_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_card"
                android:visibility="gone"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/validity_card"
                style="@style/combination_item_style"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:onClick="onMyClick"
                android:paddingLeft="@dimen/combination_text_edit_margin_left"
                android:paddingRight="@dimen/combination_text_edit_margin_left">

                <TextView
                    style="@style/combination_left_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/validity_period" />

                <EditText
                    android:id="@+id/validity_period"
                    style="@style/combination_right_edittext_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onMyClick"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center_vertical"
                    android:hint="@string/validity_period_hint"
                    android:background="@color/white" >

                </EditText>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:src="@drawable/btn_arrow_go_gray"/>
            </LinearLayout>
                <View
                    style="@style/seperator"
                    android:layout_marginLeft="@dimen/common_distance_level_1"/>

            <LinearLayout
                android:id="@+id/id_combinatiion_text_edit_text"
                style="@style/combination_item_style"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/combination_text_edit_margin_left"
                android:paddingRight="@dimen/combination_text_edit_margin_left">

                <TextView
                    style="@style/combination_left_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/safetycode" />

                <EditText
                    android:id="@+id/safety_code"
                    style="@style/combination_right_edittext_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:inputType="number"
                    android:gravity="right|center_vertical"
                    android:duplicateParentState="true"
                    android:layout_weight="1"
                    android:hint="@string/safety_code_hint1"
                    android:background="@color/white" >

                </EditText>

            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/seperator"
            android:layout_marginLeft="@dimen/common_distance_level_1"/>
        </LinearLayout>

        <LinearLayout
            style="@style/combination_item_style"
            android:orientation="horizontal"
            android:id="@+id/ll_phone"
            android:visibility="gone"
            android:paddingLeft="@dimen/combination_text_edit_margin_left"
            android:paddingRight="@dimen/combination_text_edit_margin_left"
            android:background="@color/white">

            <TextView
                style="@style/combination_left_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/login_phone_number" />

            <EditText
                android:id="@+id/bank_mobile_phone"
                style="@style/combination_right_edittext_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:gravity="right|center_vertical"
                android:duplicateParentState="true"
                android:inputType="phone"
                android:layout_weight="1"
                android:hint="@string/bank_mobile_phone"
                android:background="@color/white" >

            </EditText>

        </LinearLayout>
        <View
            style="@style/seperator"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cbox_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mycheckbox"
                android:textSize="@dimen/small_text_size"
                android:drawablePadding="1dp"
                android:checked="true"
                android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
                android:textColor="@color/combination_title_text_color"
                android:text="@string/i_agree"/>
            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/combination_little_title_style"
                android:layout_marginLeft="0dp"
                android:textColor="@color/common_blue_color"
                android:text="@string/fast_payment_service_protocol1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btn_top_line"
            android:onClick="onMyClick"
            android:clickable="true"
            android:text="下一步"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true" >
        <include layout="@layout/layout_keyboard" />
    </RelativeLayout>
</RelativeLayout>
