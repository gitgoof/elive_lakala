<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/back2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_one"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="请务必添加您本人信用卡"
            />
        <TextView
            android:id="@+id/tv_check_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="查看支持银行"
            android:clickable="true"
            android:background="@drawable/ll_swi2"
            android:textColor="@color/text_blue2"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/font_gray_two"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/ll_swi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="持卡人姓名"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="马瑶"
            android:gravity="center|right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/font_gray_two"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/ll_swi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="身份证号码"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_id_card_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="2****************5"
            android:gravity="center|right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/font_gray_two"
        />
    <LinearLayout
        android:id="@+id/ll_get_card_no"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/ll_swi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="银行卡号"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_card_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:textColorHint="@color/font_gray_three"
            android:hint="刷卡获取"
            android:gravity="center|right"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_arrow_go_gray"
            android:layout_width="8dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/font_gray_two"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/ll_swi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="开户行"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:textColorHint="@color/font_gray_three"
            android:hint="开户银行"
            android:gravity="center|right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/font_gray_two"
        />
    <LinearLayout
        android:id="@+id/ll_get_card_im"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/ll_swi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="银行卡正面照"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:textColorHint="@color/font_gray_three"
            android:gravity="center|right"
            />
        <ImageView
            android:background="@drawable/btn_upload_idcard_face_down"
            android:id="@+id/iv_card_im"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="36dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/font_gray_two"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/ll_swi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:text="预留手机号"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/font_gray_two"
            android:textSize="14sp"
            android:maxLength="11"
            android:hint="请输入银行预留手机号码"
            android:inputType="phone"
            android:textColorHint="@color/font_gray_three"
            android:gravity="center|right"
            android:background="@drawable/no_back"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/font_gray_two"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        >
        <CheckBox
            android:id="@+id/check_agree"
            style="@style/mycheckbox"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:checked="false"
            android:gravity="center_vertical"
            android:text="同意"
            android:textSize="@dimen/small_text_size" />
        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_blue"
            android:text="《快捷支付服务协议》"
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/btn_topline_selector"/>
</LinearLayout>