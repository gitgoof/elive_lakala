<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textIndicator"
                style="@style/combination_little_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="测试"
                android:layout_marginTop="@dimen/content_margin_actionbar"/>

            <com.lakala.ui.component.LabelEditText
                android:id="@+id/edit_phone_num"
                style="@style/labeledittext_sytle_for_shoudan"
                android:background="@color/white"
                android:orientation="vertical"
                app:hint="请输入手机号码"
                app:inputType="phone"
                app:labelText="@string/login_phone_number"
                />

            <!--<View-->
                <!--style="@style/seperator"/>-->

            <com.lakala.ui.component.CountdownInputBoxView
                style="@style/combination_right_edittext_style"
                android:paddingLeft="@dimen/combination_text_edit_margin_left"
                android:background="@color/white"
                android:id="@+id/countdown_inputbox"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <include
                    android:id="@+id/include2"
                    layout="@layout/shoudan_btnwithtopline_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
