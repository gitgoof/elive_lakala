<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusableInTouchMode="true"
              android:focusable="true"
              android:background="@color/bg_main_gray_color"
              android:orientation="vertical">
    <requestFocus/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/combination_little_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_margin_actionbar"
                android:text="请如实填写以下信息"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <include
                    android:id="@+id/include_name"
                    layout="@layout/shoudan_combination_text_edit"/>

                <ImageView
                    style="@style/combination_seperator_style"/>

                <include
                    android:id="@+id/include_idcard"
                    layout="@layout/shoudan_combination_text_edit"/>
            </LinearLayout>

            <TextView
                style="@style/combination_little_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_distance_level_1"
                android:text="请选择银行卡信息"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <include
                    android:id="@+id/include_bankname"
                    layout="@layout/shoudan_combination_text_edit"/>

                <ImageView
                    style="@style/combination_seperator_style"/>

                <include
                    android:id="@+id/include_bankcode"
                    layout="@layout/shoudan_combination_text_edit"/>

                <ImageView
                    style="@style/combination_seperator_style"/>
                <LinearLayout
                    android:id="@+id/ll_check_captcha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/include_userphone"
                        layout="@layout/shoudan_combination_text_edit"/>

                    <ImageView
                        style="@style/combination_seperator_style"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/order_item_height"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        android:paddingRight="@dimen/combination_text_edit_margin_left">

                        <TextView
                            android:id="@+id/tv_label"
                            style="@style/combination_left_textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            tools:text="TextView"/>

                        <com.lakala.ui.component.CaptchaTextView
                            android:id="@+id/tv_get_captcha"
                            style="@style/combination_right_edittext_style"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:enabled="false"
                            android:textColor="@color/text_get_captcha_color_selector"/>

                        <View
                            android:id="@+id/v_seperator"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/common_distance_level_1"
                            android:layout_toLeftOf="@id/tv_get_captcha"
                            android:background="@color/hint_or_divider_color"/>

                        <EditText
                            android:id="@+id/et_input_captcha"
                            style="@style/combination_right_edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            android:layout_marginRight="@dimen/common_distance_level_1"
                            android:layout_toLeftOf="@id/v_seperator"
                            android:layout_toRightOf="@id/tv_label"
                            android:ellipsize="start"
                            android:inputType="phone"
                            android:singleLine="true"
                            tools:hint="EditText"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/check_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mycheckbox"
                        android:checked="true"
                        />

                    <TextView
                        style="@style/shoudan_text_medium_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="同意"
                        android:textColor="@color/combination_title_text_color"
                        android:textSize="@dimen/small_text_size"/>

                    <TextView
                        android:id="@+id/tv_agreement1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《拉卡拉“赚点钱”服务协议》"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/small_text_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@color/combination_title_text_color"
                        android:textSize="@dimen/small_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/check_selector"
                        android:button="@null"
                        style="@style/mycheckbox"
                        android:visibility="invisible"
                        />

                    <TextView
                        style="@style/shoudan_text_medium_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="同意"
                        android:textColor="@color/combination_title_text_color"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tv_agreement2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《拉卡拉基金理财服务协议》"
                        android:textColor="@color/common_blue_color"
                        android:textSize="@dimen/small_text_size"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/id_common_guide_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/btn_top_line"
                android:text="下一步"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>