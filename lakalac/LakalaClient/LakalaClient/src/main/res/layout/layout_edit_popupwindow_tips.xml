<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dimen_40"
    android:layout_marginRight="@dimen/dimen_40"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lakala.ui.component.BubbleTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_popupwindow_tips"
            app:bubbleTextSize="@dimen/font_size_small"
            app:bubbleTextColor="@color/blue_006699"
            app:bubble_background_color="@color/white"
            app:bubble_radius="5dp"
            app:triangle_width="@dimen/dimen_40"
            app:triangle_margin_end="@dimen/dimen_40"
            />
    </LinearLayout>

</LinearLayout>