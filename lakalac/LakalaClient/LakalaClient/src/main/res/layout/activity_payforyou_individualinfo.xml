<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/app_background_white"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
    <requestFocus/>
    <!-- 基本资料 -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_marginTop="@dimen/content_margin_actionbar"
            android:paddingBottom="@dimen/content_margin_actionbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/layout_first"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >
                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:id="@+id/applyname_tag"
                        android:text="@string/name"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_left_textview_style" />

                    <EditText
                        android:id="@+id/applyname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="right|center"
                        android:hint="@string/name_input"
                        android:singleLine="true"
                        style="@style/combination_right_edittext_style" />
                </TableRow>
                <ImageView
                    style="@style/combination_seperator_style"/>
                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:id="@+id/id_tag"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        android:text="@string/wallet_ID_card"
                        style="@style/combination_left_textview_style" />

                    <EditText
                        android:id="@+id/id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="right|center"
                        android:hint="@string/id_edit_input"
                        android:singleLine="true"
                        style="@style/combination_right_edittext_style" />
                </TableRow>

                <ImageView
                    style="@style/combination_seperator_style"/>

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:id="@+id/city_tag"
                        android:layout_height="match_parent"
                        android:text="@string/loan_city"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_left_textview_style"/>

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="right|center"
                        android:hint="@string/loan_city_input"
                        android:singleLine="true"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_right_edittext_style" />

                    <ImageView
                        android:id="@+id/city_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/combination_text_edit_margin_left"
                        android:src="@drawable/btn_arrow_go" />
                </TableRow>

                <ImageView
                    style="@style/combination_seperator_style"/>

                <TableRow
                    android:minHeight="@dimen/order_item_height">
                    <TextView
                        android:id="@+id/address_tag"
                        android:layout_height="match_parent"
                        android:text="@string/loan_address"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_left_textview_style" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="right|center"
                        android:hint="@string/loan_address_input"
                        android:singleLine="true"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_right_edittext_style" />
                </TableRow>

                <ImageView
                    style="@style/combination_seperator_style"/>

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:id="@+id/education_tag"
                        android:layout_height="match_parent"
                        android:text="@string/loan_high_level"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_left_textview_style" />

                    <TextView
                        android:id="@+id/education"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="right|center"
                        android:hint="@string/loan_high_level_input"
                        android:singleLine="true"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_right_edittext_style" />

                    <ImageView
                        android:id="@+id/education_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/combination_text_edit_margin_left"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/btn_arrow_go" />
                </TableRow>

                <ImageView
                    style="@style/combination_seperator_style"/>

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:id="@+id/email_tag"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        android:text="@string/email"
                        style="@style/combination_left_textview_style" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="right|center"
                        android:hint="@string/loan_email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_right_edittext_style" />
                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_below="@+id/layout_first"
                android:id="@+id/layout_second"
                android:layout_marginTop="30dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:layout_gravity="left|center_vertical"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_left_textview_style"
                        android:text="@string/card_photo" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/shoudan_id_photo_front"
                            android:layout_width="36dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/btn_upload_idcard_face_selector" />

                        <ImageView
                            android:id="@+id/shoudan_id_photo_back"
                            android:layout_width="36dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/btn_upload_idcard_back_selector" />
                        <ImageView
                            android:id="@+id/newphoto"
                            android:layout_width="22dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_portrait" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

           <TextView
               style="@style/combination_little_title_style"
               android:layout_below="@+id/layout_second"
               android:id="@+id/info"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:layout_marginBottom="0dp"
               android:paddingRight="@dimen/combination_text_edit_margin_left"
               android:gravity="right"
               android:layout_alignParentRight="true"
               android:textColor="@color/common_blue_color"
               android:textStyle="normal"
               android:text="@string/info" />

            <TableLayout
                android:id="@+id/layout_third"
                android:layout_below="@+id/info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >



                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:id="@+id/contact_name_tag"
                        android:text="@string/contact_name"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_left_textview_style" />

                    <EditText
                        android:id="@+id/contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:hint="@string/contact_name_input"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        android:singleLine="true"
                        style="@style/combination_right_edittext_style" />
                </TableRow>

                <ImageView
                    style="@style/combination_seperator_style"/>

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        android:id="@+id/contact_mobileno_tag"
                        android:text="@string/contact_mobileno"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_left_textview_style" />

                    <EditText
                        android:id="@+id/contact_mobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="right|center"
                        android:hint="@string/contact_mobileno_input"
                        android:inputType="number"
                        android:singleLine="true"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        style="@style/combination_right_edittext_style" />
                </TableRow>


            </TableLayout>

            <LinearLayout
                android:id="@+id/bottommenu"
                android:layout_below="@id/layout_third"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/next"
                    style="@style/btn_top_line"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/next" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>