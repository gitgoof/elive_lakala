<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x15"
        android:paddingBottom="@dimen/x15"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32"
            android:layout_marginRight="@dimen/x15"
            android:gravity="center"
            tools:src="@drawable/gfd_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/x14"
                    tools:text="功夫贷" />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/x10"
                    tools:text="申请中" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/x10"
                    tools:text="到账快" />

                <TextView
                    android:id="@+id/icon_1"
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x3"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@drawable/dot_focused"
                    tools:background="@drawable/dot_focused" />
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/x10"
                    tools:text="门槛低" />
                <TextView
                    android:id="@+id/icon_2"
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x3"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@drawable/dot_focused"
                    tools:background="@drawable/dot_focused"
                    />
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/x10"
                    tools:text="四个字儿" />
                <TextView
                    android:id="@+id/icon_3"
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x3"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@drawable/dot_focused"
                    tools:background="@drawable/dot_focused"
                    />
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/x10"
                    tools:text="四个字儿" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            >
            <TextView
                android:id="@+id/tv_img_more"
                android:layout_width="@dimen/x30"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:textColor="@color/gray_666666"
                android:drawablePadding="@dimen/x8"
                android:drawableRight="@drawable/btn_arrow_go_gray"
                />
        </LinearLayout>

    </LinearLayout>
    <View style="@style/seperator"
        android:layout_marginLeft="@dimen/x10"/>
    <LinearLayout
        android:id="@+id/applay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:paddingTop="@dimen/x15"
        android:paddingBottom="@dimen/x15"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_twelve_gray"
                android:text="申请金额(元)"
                android:layout_marginBottom="@dimen/list_padding"/>
            <TextView
                android:id="@+id/tv_growth_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="6.515"
                style="@style/text_style_thirty_two_yellow1"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="44dp"
            android:background="@color/scan_text_color"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_twelve_gray"
                android:text="手续费率(%)"
                android:layout_marginBottom="@dimen/list_padding"/>
            <TextView
                android:id="@+id/tv_million_copies_of_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1.5516"
                style="@style/text_style_thirty_two_yellow1"/>

        </LinearLayout>
    </LinearLayout>

    <View style="@style/seperator"/>
        <LinearLayout
            android:id="@+id/bottommenu"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x40" >

            <TextView
                android:id="@+id/next"
                style="@style/btn_top_line1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:text="立即申请" />
        </LinearLayout>
</LinearLayout>