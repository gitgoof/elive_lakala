<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:apps="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              style="@style/app_background_white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/combination_little_title_style"
        android:layout_marginTop="@dimen/content_margin_actionbar"
        android:text="请回答以下密保问题，以验证身份"/>

    <TextView
        android:id="@+id/tv_question"
        style="@style/combination_left_textview_style"
        android:paddingLeft="@dimen/combination_text_edit_margin_left"
        android:paddingRight="@dimen/combination_text_edit_margin_left"
        android:layout_toRightOf="@+id/tv_phoneagain"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        tools:text="您母亲的姓名是？"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_centerVertical="true"
        android:singleLine="true"/>

    <ImageView
        style="@style/combination_seperator_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/combination_text_edit_margin_left"
        android:paddingRight="@dimen/combination_text_edit_margin_left">

        <TextView
            style="@style/combination_left_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="答案"/>

        <EditText
            android:id="@+id/et_answer"
            style="@style/combination_left_textview_style"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_phoneagain"
            android:background="@color/white"
            tools:hint="请填写2-16个汉字"
            android:paddingLeft="@dimen/combination_text_edit_margin_left"
            android:paddingRight="@dimen/combination_text_edit_margin_left"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/blue_main_color"
        android:text="忘记答案"
        android:layout_gravity="right"/>
    <TextView
        android:id="@+id/id_common_guide_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/btn_top_line"
        android:enabled="false"
        android:text="确定" />
</LinearLayout>