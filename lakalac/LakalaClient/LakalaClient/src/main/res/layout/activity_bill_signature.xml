<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.lakala.ui.component.CustomScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bg_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/bg_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical"></LinearLayout>


            <LinearLayout
                android:id="@+id/context"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/bg_right"
                android:layout_toRightOf="@id/bg_left"
                android:orientation="vertical">

                <com.lakala.ui.component.CustomTableListView
                    android:id="@+id/result_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/transparent" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/signature_layout_parent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/common_distance_level_1">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tv"
                                style="@style/text_style_normal_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/cardholder_signature" />

                            <TextView
                                android:id="@+id/go_signature_activity"
                                style="@style/text_style_normal_blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv"
                                android:clickable="true"
                                android:gravity="right"
                                android:paddingRight="5dp"
                                android:text="@string/landscape" />

                        </LinearLayout>

                        <View style="@style/seperator" />

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="180dp"
                            android:background="@color/white"
                            android:padding="3dp">
                            <com.lakala.shoudan.component.SignatureView
                                android:id="@+id/signature_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="180dp"
                                 />
                        </FrameLayout>



                        <!--<ImageView-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:id="@+id/signature"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@id/tv"-->
                        <!--/>-->
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/re_sign"
                            style="@style/btn_comment_with_stroke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_distance_level_2"
                            android:layout_weight="1.0"
                            android:text="@string/re_sign" />

                        <Button
                            android:id="@+id/complete"
                            style="@style/btn_top_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/complete" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </com.lakala.ui.component.CustomScrollView>
</LinearLayout>