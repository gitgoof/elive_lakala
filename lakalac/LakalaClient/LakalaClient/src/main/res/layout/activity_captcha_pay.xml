<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:apps="http://schemas.android.com/apk/res-auto"
              style="@style/app_background_white"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_distance_level_1"
        style="@style/combination_little_title_style"
        tools:text="请输入手机尾号6803收到的短信验证码："/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_item_height">
        <com.lakala.ui.component.CaptchaTextView
            android:id="@+id/tv_get_captcha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="获取验证码"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_get_captcha_color_selector"/>
        <View
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_get_captcha"
            android:background="@color/hint_or_divider_color"/>
        <EditText
            android:inputType="number"
            android:maxLength="6"
            android:id="@+id/et_input_captcha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/combination_left_textview_style"
            android:paddingLeft="@dimen/combination_text_edit_margin_left"
            android:hint="请输入短信验证码"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@id/divider"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/id_common_guide_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/btn_top_line"
        android:enabled="false"
        android:text="确定" />
</LinearLayout>