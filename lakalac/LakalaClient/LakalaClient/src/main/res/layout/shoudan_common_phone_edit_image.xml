<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/id_common_phone_edit_image"
                style="@style/combination_item_style"
                android:visibility="gone"
                android:paddingBottom="2dp"
                android:paddingRight="@dimen/combination_text_edit_margin_left"
                android:paddingLeft="@dimen/combination_text_edit_margin_left"
                android:paddingTop="2dp">

    <TextView
        android:id="@+id/id_common_phone_edit_image_phone"
        style="@style/shoudan_text_medium_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/phone_number"
        android:textAppearance="@style/text_style_normal" />


    <ImageView
        android:id="@+id/id_common_phone_edit_image_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_contact"/>

    <EditText
        android:id="@+id/id_common_phone_edit_image_edit"
        style="@style/combination_right_edittext_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/id_common_phone_edit_image_phone"
        android:layout_toLeftOf="@id/id_common_phone_edit_image_image"
        android:background="@color/white"
        android:hint="@string/phone_number"
        android:maxLength="13"
        android:phoneNumber="true" >
    </EditText>
</RelativeLayout>