<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/app_background_white"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:background="@color/main_nav_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dimen_15"
            android:paddingLeft="@dimen/combination_text_edit_margin_left"
            android:paddingRight="@dimen/combination_text_edit_margin_left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mobile_server"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#ccffffff"
                android:textSize="@dimen/font_size_10"
                android:layout_weight="1"
                tools:text="中国移动积分 138****1222"/>
            <TextView
                android:id="@+id/query_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分查询"
                android:textSize="@dimen/font_size_10"
                android:padding="3dp"
                android:background="@drawable/bg_corner4dp_white_shape"
                android:textColor="@color/main_nav_blue"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size_13"
            android:text="代金券总额（元）"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40">
            <com.lakala.shoudan.component.CustomTextView
                android:id="@+id/integral_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_24"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/integral_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_toRightOf="@id/integral_total"
                android:textColor="@color/main_nav_blue"
                android:textSize="@dimen/font_size_9"
                android:text="查看"
                android:visibility="gone"
                android:layout_alignBottom="@id/integral_total"
                android:layout_marginLeft="@dimen/dimen_8"
                android:background="@drawable/bg_corner4dp_white_shape"/>
        </RelativeLayout>
    </LinearLayout>
    <!--<ListView-->
        <!--android:id="@+id/lv_integral_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:paddingTop="10dp"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:paddingRight="10dp"-->
        <!--android:divider="@drawable/bg_transparent_shap"-->
        <!--android:showDividers="middle"-->
        <!--style="@style/app_background_white"/>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <com.lakala.ui.component.CustomTableListView
            android:id="@+id/lv_integral_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:divider="@drawable/bg_transparent_shap"
            android:showDividers="middle"
            style="@style/app_background_white"/>
    </ScrollView>
    <TextView
        android:id="@+id/integral_bottom_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999999"
        android:layout_gravity="center_horizontal"
        android:text="详情请咨询客服95016789或"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="11sp"/>
</LinearLayout>
