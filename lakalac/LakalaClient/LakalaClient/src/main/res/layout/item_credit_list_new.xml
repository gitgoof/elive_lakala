<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/x13"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/x22"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginTop="@dimen/x13"
                android:gravity="center"
                tools:src="@drawable/gfd_logo" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x9"
                android:textColor="#333333"
                android:textSize="12dp"
                tools:text="功夫贷" />
        </LinearLayout>

        <View
            style="@style/seperator1"
            android:layout_marginBottom="@dimen/x13"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginTop="@dimen/x13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x18"
                android:layout_marginTop="@dimen/x9"
                android:text="可贷金额(元)"
                android:textColor="#999999"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_growth_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/x18"
                android:layout_marginTop="@dimen/x7"
                android:textColor="#ff8308"
                android:textSize="17dp"
                tools:text="6.515" />

            <TextView
                android:id="@+id/tv_kashuabao"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/x18"
                android:layout_marginRight="@dimen/x13"
                android:layout_marginTop="@dimen/x13"
                android:lineSpacingExtra="@dimen/x17"
                android:textColor="#666666"
                android:textSize="10dp"
                tools:text="卡刷爆了,拉卡拉帮你还钱，款项直接打入本人信用卡" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/x9"
                android:layout_marginRight="@dimen/x13"
                android:layout_marginTop="@dimen/x13"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/x9"
                tools:text="由什么什么公司提供" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/seperator"
        android:layout_marginLeft="@dimen/x15" />

    <TextView
        android:id="@+id/applay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="查看详情"
        android:textColor="#03aaf3"
        android:textSize="@dimen/x12" />
</LinearLayout>