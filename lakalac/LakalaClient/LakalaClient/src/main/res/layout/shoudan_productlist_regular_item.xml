<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_regular_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考拉理财1号-进取型"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:layout_marginLeft="@dimen/common_distance_level_1"
            style="@style/text_style_twelve_black"
            />
        <TextView
            android:id="@+id/tv_prod_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[1148期]"
            android:layout_marginTop="@dimen/common_distance_level_1"
            style="@style/text_style_twelve_black"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1.0"/>
        <TextView
            android:id="@+id/tv_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24日8:00开售"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:layout_marginRight="@dimen/common_distance_level_1"
            android:singleLine="true"
            style="@style/text_style_ten_black"
            android:layout_marginBottom="@dimen/common_distance_level_1"
            />
        <ImageView
            android:id="@+id/iv_sold_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_sold_out"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_growth_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.5"
                style="@style/text_style_thirty_two_yellow"/>
            <TextView
                android:id="@+id/tv_growth_rate_txt"
                android:layout_marginTop="@dimen/list_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_twelve_gray"
                android:text="预期年化收益(%)"
                android:layout_marginBottom="@dimen/order_next_btn_margin_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@color/scan_text_color"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_regual_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="365"
                style="@style/text_style_thirty_two_yellow"/>
            <TextView
                android:id="@+id/tv_regual_days_txt"
                android:layout_marginTop="@dimen/list_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_twelve_gray"
                android:text="产品期限(天)"
                android:layout_marginBottom="@dimen/order_next_btn_margin_horizontal"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_arrow_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_arrow_go"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_distance_level_1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/common_distance_level_1">
        <TextView
            android:id="@+id/tv_isanytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可变现"
            style="@style/text_style_ten_gray"
            />
        <TextView
            android:id="@+id/tv_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_padding"
            android:text="●"
            android:textColor="@color/amount_color"
            />
        <TextView
            android:id="@+id/tv_start_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1元起购"
            style="@style/text_style_ten_gray"
            android:layout_marginLeft="@dimen/list_padding"
            />
        <TextView
            android:id="@+id/tv_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_padding"
            android:text="●"
            android:textColor="@color/amount_color"
            />
        <TextView
            android:id="@+id/tv_risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高风险"
            style="@style/text_style_ten_gray"
            android:layout_marginLeft="@dimen/list_padding"
            />
    </LinearLayout>

</LinearLayout>
