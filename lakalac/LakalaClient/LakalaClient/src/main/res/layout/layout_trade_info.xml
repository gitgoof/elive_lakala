<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_trade"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view_seperator_1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_size_13"
    android:paddingLeft="@dimen/common_size_15"
    android:paddingRight="@dimen/common_size_15"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/rl_trade_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/common_size_13">

        <TextView
            style="@style/style_tv_trade_description"
            android:layout_alignParentLeft="true"
            android:text="交易状态"
            android:textColor="@color/gray_666666" />

        <TextView
            android:id="@+id/tv_trade_status"
            style="@style/style_tv_trade_description"
            android:layout_alignParentRight="true"
            android:text="交易成功" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_collectionNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/common_size_13">

        <TextView
            android:id="@+id/tv_trade_card"
            style="@style/style_tv_trade_description"
            android:layout_alignParentRight="true"
            android:text="62220226*****2900" />

        <TextView
            android:id="@+id/tv_payNum"
            style="@style/style_tv_trade_description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="付款卡号"
            android:textColor="@color/gray_666666" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/common_size_13"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_special"
            style="@style/style_tv_trade_description"
            android:layout_alignParentLeft="true"
            android:text="收款卡号"
            android:textColor="@color/gray_666666" />

        <TextView
            android:id="@+id/tv_trade_card_special"
            style="@style/style_tv_trade_description"
            android:layout_alignParentRight="true"
            android:text="62220226*****2900" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/common_size_13">

        <TextView
            android:id="@+id/tv_tradeDep"
            style="@style/style_tv_trade_description"
            android:layout_alignParentLeft="true"
            android:text="交易时间"
            android:textColor="@color/gray_666666" />

        <TextView
            android:id="@+id/tv_trade_time"
            style="@style/style_tv_trade_description"
            android:layout_alignParentRight="true"
            android:text="2016年7月18日 10:00" />
    </RelativeLayout>

</LinearLayout>