<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_size_small"
    android:paddingRight="@dimen/margin_size_small"
    style="@style/app_background_white">
    <TextView
        android:layout_marginTop="15dp"
        android:textSize="14.0sp"
        android:textColor="@color/gray_999999"
        android:visibility="visible"
        android:id="@+id/add_bank_card_hint"
        android:text="绑定多家银行卡您的支付权限更多哦~快来添加吧~"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_credit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bankaddition"
        android:layout_marginTop="@dimen/margin_size_small"
        android:dividerHeight="@dimen/common_distance_level_1"
        android:divider="@color/bg_main_gray_color"
        android:scrollbars="none">
    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_distance_level_1"/>
</LinearLayout>
