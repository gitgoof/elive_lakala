        <!--android:clickable="true"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/main_nav_blue"-->
        <!--android:textSize="@dimen/x16"-->
        <!--android:text="我知道了"-->
        <!--/>-->
    </LinearLayout>
    <View
        android:layout_width="2dp"
        android:background="#00000000"
        android:layout_height="match_parent"/>
</LinearLayout>

