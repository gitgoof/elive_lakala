<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/app_background_white"
    android:id="@+id/view_group"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            style="@style/seperator"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_bank_icon"
                android:layout_width="@dimen/common_distance_level_3"
                android:layout_height="@dimen/common_distance_level_3"
                android:layout_marginTop="@dimen/common_distance_level_1"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                android:layout_margin="@dimen/common_distance_level_1"
                />
            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="招商银行"
                android:layout_toRightOf="@id/iv_bank_icon"
                android:layout_marginTop="@dimen/common_distance_level_1"
                style="@style/text_style_normal"
                />
            <TextView
                android:id="@+id/tv_bank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="（尾号5484）"
                android:layout_toRightOf="@id/tv_bank_name"
                android:layout_marginTop="@dimen/common_distance_level_1"
                style="@style/text_style_fourteen_gray"
                />
            <TextView
                android:id="@+id/tv_bank_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="储蓄卡"
                android:layout_toRightOf="@id/iv_bank_icon"
                android:layout_below="@id/tv_bank_name"
                android:layout_marginTop="@dimen/common_distance_level_1"
                android:paddingBottom="@dimen/common_distance_level_1"
                style="@style/text_style_twelve_gray"
                />
        </RelativeLayout>
        <View
            style="@style/seperator"/>
        <LinearLayout
            android:id="@+id/ll_validity_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="gone">
            <include
                android:id="@+id/include_validity_period"
                layout="@layout/shoudan_combination_text_edit"/>
            <View
                style="@style/seperator"
                android:layout_marginLeft="@dimen/common_distance_level_1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_safety_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="gone">
            <include
                android:id="@+id/include_safety_code"
                layout="@layout/shoudan_combination_text_edit"/>
            <View
                style="@style/seperator"
                android:layout_marginLeft="@dimen/common_distance_level_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <include
                android:id="@+id/include_phone_number"
                layout="@layout/shoudan_combination_text_edit"/>
            <View
                style="@style/seperator"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_distance_level_2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <include
                android:id="@+id/include_name"
                layout="@layout/shoudan_combination_text_edit"/>
            <View
                style="@style/seperator"
                android:layout_marginLeft="@dimen/common_distance_level_1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <include
                android:id="@+id/include_idcard"
                layout="@layout/shoudan_combination_text_edit"/>
            <View
                style="@style/seperator"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cbox_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mycheckbox"
                android:textSize="@dimen/small_text_size"
                android:drawablePadding="1dp"
                android:checked="true"
                android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
                android:textColor="@color/combination_title_text_color"
                android:text="@string/i_agree"/>
            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/combination_little_title_style"
                android:layout_marginLeft="0dp"
                android:textColor="@color/common_blue_color"
                android:text="@string/fast_payment_service_protocol"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_next_step"
            style="@style/btn_top_line"
            android:layout_marginBottom="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true" >
        <include layout="@layout/layout_keyboard" />
    </RelativeLayout>
</RelativeLayout>
