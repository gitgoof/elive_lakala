<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/combination_little_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_actionbar"
        android:text="商品单号"/>

    <View
        style="@style/seperator"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_scancode"
            style="@style/combination_left_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_item_height"
            android:layout_toLeftOf="@+id/ll_scancode"
            android:hint="请输入或扫描商户单号"/>

        <RelativeLayout
            android:id="@+id/ll_scancode"
            android:layout_width="@dimen/order_item_height"
            android:layout_height="@dimen/order_item_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_distance_level_1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_scancode"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
        style="@style/seperator"/>

    <TextView
        android:id="@+id/btn_scancode_revocation_ok"
        style="@style/btn_top_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确定"/>
</LinearLayout>
