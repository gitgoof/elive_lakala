<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    style="@style/app_background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView
        android:id="@+id/layout_scroll"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/layout_context"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >


                  <include
                        android:id="@+id/layout_contract"
                        layout="@layout/shoudan_combination_text_edit" />

                <View
                    style="@style/seperator"
                    android:layout_marginLeft="15dp" />
                   <include
                        android:id="@+id/layout_till_amount"
                        layout="@layout/shoudan_combination_text_edit" />

                <View
                    style="@style/seperator"
                    android:layout_marginLeft="15dp" />
                
                   <include
                        android:id="@+id/layout_loan_amount"
                        layout="@layout/shoudan_combination_text_edit" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_context"
                android:padding="10dp"
                android:text="您还可以在拉卡拉多媒体终端刷卡还款"
                android:textColor="@color/gray_A4A4A4"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/btn_sure"
                    style="@style/btn_top_line"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/layout_keyboard" />
    </RelativeLayout>
</RelativeLayout>