<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/check_select_layout"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:paddingRight="@dimen/combination_text_edit_margin_left"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_check_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/radio_button_unselect" />

    <TextView
        android:id="@+id/id_check_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        tools:text="实时转账"
        android:textAppearance="@style/text_style_normal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right">
        <ImageView
            android:id="@+id/id_check_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/check_button_selector" />
    </RelativeLayout>

</LinearLayout>