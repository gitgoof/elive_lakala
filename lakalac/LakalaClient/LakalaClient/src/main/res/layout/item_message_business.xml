<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/common_size_13">

    <TextView
        android:id="@+id/tv_time"
        style="@style/style_tv_time_message" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_container"
            style="@style/rl_container_message">

            <RelativeLayout
                android:id="@+id/ll_title"
                style="@style/style_ll_title">

                <ImageView
                    android:id="@+id/iv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/wallet_phone" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/style_tv_title_message"
                    android:layout_toRightOf="@+id/iv_title"
                    android:text="扫码收款业务通知" />

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/style_tv_title_message"
                    android:layout_alignParentRight="true"
                    android:text="+50" />
            </RelativeLayout>

            <View
                android:id="@+id/view_seperator_1"
                style="@style/news_seperator"
                android:layout_below="@+id/ll_title" />

            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_seperator_1">

                <include layout="@layout/layout_trade_info" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/style_tv_description_message"
                    android:text="恭喜您,您的扫码业务开通已审核通过，快去使用吧!"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_trade_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_content">

                <View
                    android:id="@+id/view_seprator"
                    style="@style/news_seperator" />


                <TextView
                    android:id="@+id/tv_function"
                    style="@style/style_tv_operation"
                    android:layout_below="@+id/view_seprator"
                    android:layout_gravity="center"
                    android:text="立即提交" />
            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_container_bp"
            style="@style/rl_container_message"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/fl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_title_text"
                    style="@style/style_ll_title"
                    android:visibility="visible">

                    <com.lakala.ui.component.CornerImageView
                        android:id="@+id/iv_publish_icon"
                        android:layout_width="@dimen/common_size_22"
                        android:layout_height="@dimen/common_size_22"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic_news" />

                    <TextView
                        android:id="@+id/tv_publish_title"
                        style="@style/style_tv_title_message"
                        android:layout_toRightOf="@+id/iv_publish_icon"
                        android:text="扫码收款业务通知" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_publish_title"
                    style="@style/style_pic"
                    android:src="@drawable/banner_default_small"
                    android:visibility="gone" />

            </FrameLayout>


            <View
                android:id="@+id/view_seperator_2"
                style="@style/news_seperator"
                android:layout_below="@+id/fl_title" />

            <FrameLayout
                android:id="@+id/fl_content_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_seperator_2">

                <TextView
                    android:id="@+id/tv_content_publish"
                    style="@style/style_tv_description_message"
                    android:text="领个红包一堆规则\n不想加班哈哈哈\n出差补助也不发\n放大镜看世界" />

                <ImageView
                    android:id="@+id/iv_content_publish"
                    style="@style/style_pic"
                    android:layout_height="@dimen/x200"
                    android:src="@drawable/banner_default_big"
                    android:visibility="visible" />

            </FrameLayout>

            <View
                android:id="@+id/view_seprator_content"
                style="@style/news_seperator"
                android:layout_below="@+id/fl_content_bp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content_bottom"
                style="@style/style_tv_description_message"
                android:layout_below="@+id/view_seprator_content"
                android:text="领个红包一堆规则\n不想加班哈哈哈\n出差补助也不发\n放大镜看世界"
                android:visibility="gone" />

            <View
                android:id="@+id/view_seprator_3"
                style="@style/news_seperator"
                android:layout_below="@+id/tv_content_bottom" />


            <FrameLayout
                android:id="@+id/fl_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_seprator_3">

                <TextView
                    android:id="@+id/tv_function_left"
                    style="@style/style_tv_operation"
                    android:layout_marginLeft="@dimen/common_size_11"
                    android:text="查看详情" />

                <TextView
                    android:id="@+id/tv_function_middle"
                    style="@style/style_tv_operation"
                    android:layout_gravity="center"
                    android:text="版本升级"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_function_right"
                    style="@style/style_tv_operation"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/common_size_11"
                    android:text="立即体验" />

            </FrameLayout>


        </RelativeLayout>
    </FrameLayout>
</LinearLayout>