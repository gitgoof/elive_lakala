<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_wealth_management_content"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_or_divider_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view"
                android:layout_width="20dp"
                android:layout_height="40dp"
                />
            <TextView
                android:id="@+id/tv_current_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="2笔"
                android:textColor="@color/white"
                android:background="@drawable/pic_bottom_color_deal"
                android:gravity="center"
                android:layout_toRightOf="@id/view"
                android:layout_marginLeft="@dimen/common_distance_level_3"
                android:layout_marginTop="@dimen/common_distance_level_1"
                />
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                android:background="@drawable/pic_round"
                android:layout_below="@id/view"

                />
            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活期"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                style="@style/text_style_fourteen_gray"
                android:layout_toRightOf="@id/iv_1"
                android:layout_below="@id/tv_current_count"

                />
            <TextView
                android:layout_toRightOf="@id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_fourteen_yellow"
                android:text="昨日收益"
                android:layout_below="@id/tv_current"
                android:layout_marginTop="@dimen/common_distance_level_1"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                android:layout_marginBottom="@dimen/common_distance_level_1"
                />

            <TextView
                android:id="@+id/tv_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                style="@style/text_style_twentyfour_yellow"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_current"
                android:layout_marginRight="@dimen/common_distance_level_1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                style="@style/text_style_twentyfour_yellow"
                android:layout_below="@id/tv_current"
                android:layout_toLeftOf="@id/tv_earnings"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_distance_level_1"
        android:background="@color/bg_main_gray_color_3.1">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_or_divider_color"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_or_divider_color"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@id/view"
                android:layout_width="20dp"
                android:layout_height="40dp"
                />
            <TextView
                android:id="@+id/tv_regular_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="1笔"
                android:textColor="@color/white"
                android:background="@drawable/pic_bottom_color_deal"
                android:gravity="center"
                android:layout_toRightOf="@id/view"
                android:layout_marginLeft="@dimen/common_distance_level_3"
                android:layout_marginTop="@dimen/common_distance_level_1"
                />
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                android:background="@drawable/pic_round"
                android:layout_below="@id/view"

                />
            <TextView
                android:id="@+id/tv_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定期"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                style="@style/text_style_fourteen_gray"
                android:layout_toRightOf="@id/iv_2"
                android:layout_below="@id/tv_regular_count"

                />
            <TextView
                android:layout_toRightOf="@id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_fourteen_yellow"
                android:text="预期收益"
                android:layout_below="@id/tv_regular"
                android:layout_marginTop="@dimen/common_distance_level_1"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                android:layout_marginBottom="@dimen/common_distance_level_1"
                />

            <TextView
                android:id="@+id/tv_earnings2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                style="@style/text_style_twentyfour_yellow"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_regular"
                android:layout_marginRight="@dimen/common_distance_level_1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                style="@style/text_style_twentyfour_yellow"
                android:layout_below="@id/tv_regular"
                android:layout_toLeftOf="@id/tv_earnings2"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/bg_main_gray_color_3.1">
       <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_or_divider_color"
            />
    </LinearLayout>

</LinearLayout>
