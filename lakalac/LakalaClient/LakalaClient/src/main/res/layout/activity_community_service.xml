<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/app_background_white"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common_distance_level_1"
        android:orientation="vertical">
        <View
            style="@style/seperator"/>
        <RelativeLayout
            android:id="@+id/stv_credit_payment"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/order_item_height"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credit_payment"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_arrow_go" />
        </RelativeLayout>
        <View
            style="@style/seperator"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/stv_transfer_remittance"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/order_item_height"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_remittance"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_arrow_go" />
        </RelativeLayout>

        <View
            style="@style/seperator"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/stv_telphone_payment"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/order_item_height"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telphone_payment"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_arrow_go" />
        </RelativeLayout>

        <View
            style="@style/seperator"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/stv_balance_inquery"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/order_item_height"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/balance_inquery"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_arrow_go" />
        </RelativeLayout>
        <View
            style="@style/seperator"/>
    </LinearLayout>


</LinearLayout>
