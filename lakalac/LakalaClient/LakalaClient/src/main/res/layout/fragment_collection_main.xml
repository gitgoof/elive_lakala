<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@style/app_background_white"
              android:orientation="vertical">

    <com.lakala.ui.component.MenuItemLayout
        style="@style/CollectionMenuStyle"
        android:layout_marginTop="@dimen/dimen_30"
        android:id="@+id/to_collection"
        app:leftTitle="@string/receivables"
        app:topDivideDrawable="@drawable/menu_item_divide_selector"
        app:topDivideHeight="@dimen/dimen_1"
        app:bottomDivideDrawable="@drawable/menu_item_divide_selector"
        app:bottomDivideHeight="@dimen/dimen_1"
        app:divideAlignTitle="bottom">
    </com.lakala.ui.component.MenuItemLayout>

    <com.lakala.ui.component.MenuItemLayout
        style="@style/CollectionMenuStyle"
        android:id="@+id/to_cancel_trans"
        app:leftIconDrawable="@drawable/icon_revocation"
        app:leftTitle="@string/revocation"
        app:bottomDivideDrawable="@drawable/menu_item_divide_selector"
        app:bottomDivideHeight="@dimen/dimen_1">
    </com.lakala.ui.component.MenuItemLayout>
</LinearLayout>
