<?xml version="1.0" encoding="utf-8"?>
<!-- 组合左边TextView，右边EditText的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    style="@style/combination_item_style"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/combination_text_edit_margin_left"
    android:paddingRight="@dimen/combination_text_edit_margin_left">

    <TextView
        android:id="@+id/id_combinatiion_text_edit_text"
        style="@style/combination_left_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        tools:text="TextView" />

    <EditText
        tools:hint="editText"
        android:id="@+id/id_combination_text_edit_edit"
        style="@style/combination_right_edittext_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:duplicateParentState="true"
        android:background="@color/white" >

    </EditText>

</LinearLayout>