<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
              android:gravity="center_vertical"
                android:padding="@dimen/common_distance_level_1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/red_package_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            tools:text="我最不忍看你，背向我转面"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用途："
                android:textColor="@color/gray_666666"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/red_package_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="16"
                android:textColor="@color/gray_666666"
                android:textSize="11sp"
                tools:text="要走一刻请不必诸多眷恋，浮潮浪似人潮，哪会没有"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期："
                android:textColor="@color/gray_666666"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/red_package_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/gray_666666"
                android:textSize="11sp"
                tools:text="2015.11.20-2015.12.01"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/red_package_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/red_package_amount"
        android:textSize="@dimen/xxbig_text_size"
        tools:text="3元"/>
</LinearLayout>
