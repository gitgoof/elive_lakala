<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <view
                android:id="@+id/main_navigation_bar"
                class="com.lakala.ui.component.NavigationBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:layout_gravity="center_horizontal"
                app:backBg="@drawable/shoudan_top_back_normal_selector"
                app:navBg="#03aaf3"
                app:titleMaxLength="9"
                app:btnTextSize="14sp"
                app:bottomBg="#03a2e8"
                app:titleTextSize="17sp"/>
            <View
                android:id="@+id/action_divider"
                android:layout_width="match_parent"
                android:layout_below="@id/main_navigation_bar"
                android:layout_height="0dp"
                android:background="#03a2e8"/>

            <FrameLayout
                android:id="@+id/fragment_drawer"
                android:layout_below="@id/action_divider"
                android:layout_width="match_parent"
                android:layout_height="124dp"/>

            <FrameLayout
                android:id="@+id/fragment_advert"
                android:layout_width="match_parent"
                android:layout_below="@id/fragment_drawer"
                android:layout_marginBottom="55dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:id="@id/layout_bottom"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:background="#03aaf3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_swiper_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:drawableLeft="@drawable/icon_credit_card_receivables_selector"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_barcode_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="23dp"
                        android:drawableLeft="@drawable/icon_scan_code_receivables_selector"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <com.lakala.shoudan.component.HomeImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_navigation_before"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <!--隐藏的上弹菜单-->
    <FrameLayout
        android:id="@+id/rippleLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#32777777"
            android:gravity="bottom|center_horizontal">
            <com.lakala.shoudan.component.TranslationYGridView
                android:id="@+id/grid_ripple_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:verticalSpacing="24dp"
                android:gravity="top"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"/>
            <FrameLayout
                android:id="@+id/fl_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.lakala.shoudan.component.HomeImageView
                    android:id="@+id/iv_ripple_menu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_navigation_after"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>