<?xml version="1.0" encoding="utf-8"?><!-- autor More 注册收款宝 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    style="@style/app_background_white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ScrollView
        android:id="@+id/id_input_scroll"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="请修改以下资料" />

            <TableLayout
                android:id="@+id/id_tap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TableRow
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/id_tag"
                        android:gravity="left"
                        android:paddingLeft="16dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:tag="10004"
                        android:text="身份证号码"
                        android:textColor="@color/blue_main_color" />

                    <EditText
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black_one"
                        android:gravity="right|center_vertical"
                        android:background="@color/transparence"
                        android:hint="请输入真实身份证号码"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/name_tap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TableRow
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/name_tag"
                        android:gravity="left"
                        android:paddingLeft="16dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:tag="10003"
                        android:text="真实姓名"
                        android:textColor="@color/blue_main_color" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black_one"
                        android:gravity="right|center_vertical"
                        android:background="@color/transparence"
                        android:hint="请输入真实姓名"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/email_tap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TableRow
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/email_tag"
                        android:gravity="left"
                        android:padding="16dp"
                        android:tag="10006"
                        android:text="电子邮箱"
                        android:textColor="@color/blue_main_color" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black_one"
                        android:gravity="right|center_vertical"
                        android:background="@color/transparence"
                        android:hint="请输入电子邮箱"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/layout_card_pic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:tag="10010">

                <TableRow
                    android:layout_width="fill_parent"
                    android:minHeight="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="left|center_vertical"
                        android:background="@color/white"
                        android:gravity="left"
                        android:paddingLeft="16dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="身份证照片"
                        android:textColor="@color/blue_main_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <ImageView
                            android:id="@+id/shoudan_id_photo_front"
                            android:layout_width="54dp"
                            android:layout_height="36dp"
                            android:layout_gravity="left|center_vertical"
                            android:background="@drawable/btn_upload_idcard_face_selector"
                            android:scaleType="fitXY" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="+"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/shoudan_id_photo_back"
                            android:layout_width="54dp"
                            android:layout_height="36dp"
                            android:layout_gravity="right|center_vertical"
                            android:background="@drawable/btn_upload_idcard_back_selector"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/mer_name_tap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TableRow
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/mer_name_tag"
                        android:gravity="left"
                        android:paddingLeft="16dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:tag="10001"
                        android:text="店铺名称"
                        android:textColor="@color/blue_main_color" />

                    <EditText
                        android:id="@+id/mer_name"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black_one"
                        android:gravity="right|center_vertical"
                        android:background="@color/transparence"
                        android:hint="店铺名称要求包含区域、商户名、行业"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/layout_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:tag="10011">

                <TableRow
                    android:id="@+id/layout_tv_area"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:layout_gravity="center_vertical|left"
                        android:gravity="left"
                        android:paddingLeft="16dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:tag="10011"
                        android:text="所在地区"
                        android:textColor="@color/blue_main_color" />

                    <TextView
                        android:id="@+id/tv_area_value"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:textColor="@color/text_black_one"
                        android:hint="点击获取当前位置" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_area_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/btn_location" />
                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:paddingRight="16dp"
                        android:src="@drawable/btn_arrow_go"
                        />
                </TableRow>

                <View style="@style/seperator" />
            </TableLayout>

            <TableLayout
                android:id="@+id/mer_addr_tap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TableRow
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/mer_addr_tag"
                        android:gravity="left"
                        android:paddingLeft="16dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:tag="10002"
                        android:text="经营地址"
                        android:textColor="@color/blue_main_color" />

                    <EditText
                        android:id="@+id/mer_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/text_black_one"
                        android:background="@color/transparence"
                        android:hint="注册商户地址要求与实际经营地址一致"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/radio_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/shoudan_account_receive"
                        style="@style/shoudan_text_medium_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/tendip"
                        android:paddingTop="@dimen/tendip"
                        android:text="@string/account_receive"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/radio_group_account_type"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RadioButton
                            android:id="@+id/radio_private_account"
                            style="@style/shoudan_text_normal_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/tab_2way_left_selected"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/private_account"
                            android:textColor="@color/btn_white_gray_text_selector"></RadioButton>

                        <RadioButton
                            android:id="@+id/radio_enterprise_account"
                            style="@style/shoudan_text_normal_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/tab_2way_right_normal"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/enterprise_account"
                            android:textColor="@color/btn_white_gray_text_selector"></RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <TableLayout
                    android:id="@+id/layout_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/shoudan_openbank_type"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:id="@+id/bank_tag_type"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp"
                            android:text="账户类型 "
                            android:textColor="@color/blue_main_color" />

                        <TextView
                            android:id="@+id/bank_type"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:textColor="@color/text_black_one"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:hint="请选择" />

                        <ImageView
                            android:id="@+id/img_account_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/btn_arrow_go" />
                    </TableRow>

                    <View style="@style/seperator" />
                </TableLayout>


                <TableLayout
                    android:id="@+id/bank_account_tap"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TableRow
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:id="@+id/bank_account_tag"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp"
                            android:tag="10008"
                            android:text="银行帐号"
                            android:textColor="@color/blue_main_color" />

                        <EditText
                            android:id="@+id/bank_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:textColor="@color/text_black_one"
                            android:background="@color/transparence"
                            android:hint="请仔细核对您输入的银行卡号"
                            android:phoneNumber="true"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </TableRow>

                    <View style="@style/seperator" />
                </TableLayout>

                <TableLayout
                    android:id="@+id/bank_tap"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/shoudan_openbank"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:id="@+id/bank_tag"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp"
                            android:tag="10007"
                            android:text="开户银行"
                            android:textColor="@color/blue_main_color" />

                        <TextView
                            android:id="@+id/bank"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="right"
                            android:paddingRight="16dp"
                            android:textColor="@color/text_black_one"
                            android:hint="请选择开户银行" />

                        <ImageView
                            android:id="@+id/openbank_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/btn_arrow_go"
                            android:visibility="gone" />
                    </TableRow>

                    <View style="@style/seperator" />
                </TableLayout>

                <TableLayout
                    android:id="@+id/account_name_tap"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TableRow
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:id="@+id/account_name_tag"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp"
                            android:tag="10009"
                            android:text="户名"
                            android:textColor="@color/blue_main_color" />

                        <EditText
                            android:id="@+id/account_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:textColor="@color/text_black_one"
                            android:gravity="right|center_vertical"
                            android:background="@color/transparence"
                            android:hint="请仔细核对您输入的开户姓名"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/shoudan_register_comfirm"
                style="@style/btn_top_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/ok" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <include layout="@layout/layout_keyboard" />
    </RelativeLayout>


</RelativeLayout>