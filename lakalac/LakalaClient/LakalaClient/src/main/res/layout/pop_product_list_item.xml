<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/finance_prod_height"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/common_distance_level_1"
        tools:text="全部产品"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_distance_level_1"
        android:visibility="gone"
        android:src="@drawable/icon_slected"/>
</RelativeLayout>
