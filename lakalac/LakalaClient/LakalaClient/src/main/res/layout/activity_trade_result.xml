<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent">
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/u11_line"/>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:textColor="@color/font_gray_three2"
            android:textSize="14sp"
            android:text="交易状态"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_status"
            android:textColor="@color/font_gray_one2"
            android:textSize="14sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:textColor="@color/font_gray_three2"
            android:textSize="14sp"
            android:text="        卡号"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_no"
            android:textColor="@color/font_gray_one2"
            android:textSize="14sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:textColor="@color/font_gray_three2"
            android:textSize="14sp"
            android:text="交易时间"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/font_gray_one2"
            android:textSize="14sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:textColor="@color/font_gray_three2"
            android:textSize="14sp"
            android:text="交易金额"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_num"
            android:textColor="@color/yelo"
            android:textSize="14sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:textColor="@color/font_gray_three2"
            android:textSize="14sp"
            android:text="签名状态"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sign"
            android:textColor="@color/font_gray_one2"
            android:textSize="14sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:textColor="@color/font_gray_three2"
            android:textSize="14sp"
            android:text="交易凭证"
            android:gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_proof"
            android:textColor="@color/font_gray_one2"
            android:textSize="14sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/u11_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">
        <LinearLayout
            android:id="@+id/ll_ok"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_msg"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14sp"
                android:textColor="@color/font_gray_three2"
                android:text="您今日的极速到账额度剩余0.00元，请确认是否使用极速到账服务提取"/>
            <TextView
                android:id="@+id/tv_ke"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:textColor="@color/font_gray_three2"
                android:text="可提金额"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/u11_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_num2"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_gray_three2"
                    android:textSize="14sp"
                    android:text="0.00元"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_ljtk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="立即提款"
                        android:textColor="@color/main_nav_blue"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_shou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手续费20元"
                        android:textColor="@color/font_gray_three3"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/u11_line"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_no"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_not_have"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="46dp"
                android:textSize="14sp"
                android:text="尚未开通"
                android:textColor="@color/font_gray_one2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_ok"
        style="@style/btn_top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回到首页"/>
</LinearLayout>