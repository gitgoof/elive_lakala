<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_group"
    android:focusable="true"
    android:focusableInTouchMode="true"
    style="@style/app_background_white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/combination_little_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_distance_level_2"
                android:text="@string/add_credit_card_hint"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <View
                    style="@style/seperator"/>
                <com.lakala.ui.component.LabelEditText
                    style="@style/labeledittext_sytle_no_rightpadding"
                    android:id="@+id/let_bank_card_num"
                    app:labelText="银行卡号"
                    app:rightArrowVisibility="INVISIBLE"
                    app:hint="@string/credit_card_hint"/>
                <View
                    style="@style/seperator"
                    android:layout_marginLeft="@dimen/common_distance_level_1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_item_height"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/combination_left_textview_style"
                        android:text="开户银行"
                        android:textSize="@dimen/font_size_small"
                        android:paddingLeft="@dimen/combination_text_edit_margin_left"/>
                    <TextView
                        android:id="@+id/tv_bankname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        style="@style/combination_right_edittext_style"
                        android:layout_marginRight="@dimen/combination_text_edit_margin_left"
                        />
                    <TextView
                        android:id="@+id/tv_support_bank"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        style="@style/combination_right_edittext_style"
                        android:hint="开户银行"
                        android:layout_marginRight="13dp"/>
                </LinearLayout>
                <View
                    style="@style/seperator"/>
            </LinearLayout>
            <TextView
                android:id="@+id/support_bank_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/watch_support_bank"
                android:textSize="@dimen/dimen_24"
                android:textColor="@color/main_nav_blue"
                android:layout_marginRight="@dimen/common_distance_level_1"
                android:layout_marginTop="@dimen/common_distance_level_1"/>
            <TextView
                android:id="@+id/tv_next_step"
                style="@style/btn_top_line"
                android:layout_marginBottom="0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:enabled="false"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_distance_level_1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="温馨提示"
                    style="@style/text_style_twelve_title"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1、"
                        style="@style/text_style_twelve_title"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="以下银行需要在银联用户系统中开通在线支付业务"
                            style="@style/text_style_twelve_title"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="储蓄卡：中国银行、交通银行、上海银行"
                            style="@style/text_style_twelve_title"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="信用卡：兴业银行"
                            style="@style/text_style_twelve_title"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/common_distance_level_1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2、"
                        style="@style/text_style_twelve_title"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="以下银行需先开通网上支付服务"
                            style="@style/text_style_twelve_title"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="储蓄卡：建设银行、中信银行、光大银行"
                            style="@style/text_style_twelve_title"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="信用卡：兴业银行"
                            style="@style/text_style_twelve_title"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true" >
        <include layout="@layout/layout_keyboard" />
    </RelativeLayout>
</RelativeLayout>
