<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:background="#3c000000">

        <LinearLayout
            android:id="@+id/ll_pwd_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shape_drawable"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/common_distance_level_1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_distance_level_1">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_dialog_close"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="请输入支付密码"
                    android:textColor="@color/has_input_edittext_color"
                    android:textSize="17sp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/iv_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="@dimen/common_distance_level_1"
                android:layout_marginRight="@dimen/common_distance_level_1"
                android:background="@drawable/pay_pwd_gray_bg">
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/black_dot_drawable"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/combination_title_text_color"/>
                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/black_dot_drawable"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/combination_title_text_color"/>
                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/black_dot_drawable"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/combination_title_text_color"/>
                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/black_dot_drawable"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/combination_title_text_color"/>
                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/black_dot_drawable"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/combination_title_text_color"/>
                <ImageView
                    android:id="@+id/iv_6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/black_dot_drawable"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/combination_title_text_color"
                android:text="忘记密码？"
                android:layout_gravity="right"
                android:paddingRight="@dimen/common_distance_level_1"
                android:paddingTop="@dimen/common_distance_level_1"
                android:paddingBottom="@dimen/common_distance_level_1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/combination_title_text_color"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="确定"
                android:textSize="15sp"
                android:enabled="false"
                android:textColor="@color/btn_textcolor_selector"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:id="@+id/keyboard_container"
            android:layout_below="@id/ll_pwd_container"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </RelativeLayout>
</LinearLayout>