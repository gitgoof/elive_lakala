<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:apps="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              style="@style/app_background_white"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/combination_little_title_style"
        android:layout_marginTop="@dimen/content_margin_actionbar"
        android:text="密保问题用户找回密码等操作，是验证身份、保护账户安全的重要手段"/>

    <TextView
        android:id="@+id/tv_question"
        style="@style/combination_left_textview_style"
        android:paddingLeft="@dimen/combination_text_edit_margin_left"
        android:paddingRight="@dimen/combination_text_edit_margin_left"
        android:layout_toRightOf="@+id/tv_phoneagain"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="请选择密保问题"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/btn_arrow_go_gray"
        android:layout_centerVertical="true"
        android:singleLine="true"/>

    <ImageView
        style="@style/combination_seperator_style"/>
    <EditText
        android:id="@+id/et_answer"
        style="@style/combination_left_textview_style"
        android:paddingLeft="@dimen/combination_text_edit_margin_left"
        android:paddingRight="@dimen/combination_text_edit_margin_left"
        android:layout_toRightOf="@+id/tv_phoneagain"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="请输入密保答案（2-6个汉字）"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:maxLength="6"
        android:singleLine="true"/>

    <Button
        android:id="@+id/id_common_guide_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/btn_top_line"
        android:text="确定"
        android:enabled="false"/>
</LinearLayout>