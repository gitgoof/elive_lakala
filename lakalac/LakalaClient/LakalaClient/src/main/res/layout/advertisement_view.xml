<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

    <ImageView
        android:layout_centerVertical="true"
        tools:src="@drawable/add_button_selector"
        android:id="@+id/iv_ad_image"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_width="32dp"
        android:layout_marginRight="12dp"
        android:layout_height="32dp"/>

    <TextView
        tools:text="title"
        android:layout_toRightOf="@id/iv_ad_image"
        android:id="@+id/tv_ad_title"
        android:gravity="left"
        android:textColor="@color/has_input_edittext_color"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="content"
        android:singleLine="true"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/combination_textview_color"
        android:layout_toRightOf="@id/iv_ad_image"
        android:layout_below="@id/tv_ad_title"
        android:id="@+id/tv_ad_content"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>