<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/viewgroup"
                style="@style/app_background_white"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/seperator"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/combination_left_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_distance_level_1"
                android:text="金额"/>

            <EditText
                android:id="@+id/withdrawal_amount"
                style="@style/combination_right_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:paddingRight="@dimen/combination_text_edit_margin_left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/common_distance_level_2"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/combination_left_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_distance_level_1"
                android:text="转入"/>

            <TextView
                android:id="@+id/withdrawal_card"
                style="@style/combination_right_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/common_distance_level_1"
                android:paddingRight="@dimen/combination_text_edit_margin_left"
                tools:text="招商银行(1234)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_distance_level_1"
            android:layout_marginRight="@dimen/common_distance_level_1">

            <View style="@style/seperator"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/combination_left_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_distance_level_1"
                android:text="到账时间"/>

            <TextView
                android:id="@+id/withdrawal_arrival_type"
                style="@style/combination_right_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/common_distance_level_1"
                android:drawableRight="@drawable/btn_arrow_go"
                android:paddingRight="@dimen/combination_text_edit_margin_left"
                tools:text="2小时内到账"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_distance_level_1"
            android:layout_marginRight="@dimen/common_distance_level_1"
            android:layout_marginTop="@dimen/fivedip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.  "
                android:textColor="@color/gray_A4A4A4"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/arrival_now"
                android:textColor="@color/gray_A4A4A4"
                android:textSize="@dimen/small_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_distance_level_1"
            android:layout_marginRight="@dimen/common_distance_level_1"
            android:layout_marginTop="@dimen/fivedip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.  "
                android:textColor="@color/gray_A4A4A4"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/arrival_next"
                android:textColor="@color/gray_A4A4A4"
                android:textSize="@dimen/small_text_size"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/seperator"
        style="@style/seperator"
        android:layout_above="@+id/go_to_withdrawal"/>

    <TextView
        android:id="@+id/go_to_withdrawal"
        style="@style/text_style_fourteen_blue"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="确定"/>
</RelativeLayout>
