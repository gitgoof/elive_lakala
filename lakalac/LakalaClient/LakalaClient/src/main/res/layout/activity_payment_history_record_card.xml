<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/app_background_white">
    <TextView
        style="@style/text_style_large_bold"
        android:id="@+id/tips_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_40"
        android:text="@string/no_credit_data"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/ll_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/textView1"
            style="@style/combination_little_title_style"
            android:layout_marginTop="@dimen/content_margin_actionbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_crecard"/>

        <View
            style="@style/seperator"/>
        <LinearLayout
            android:id="@+id/ll_history_list_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/combination_text_edit_margin_left">
            <ListView
                android:id="@+id/lv_history_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#ffffff"
                android:listSelector="@android:color/transparent"
                android:divider="@color/hint_or_divider_color"
                android:dividerHeight="0.5dp"
                android:headerDividersEnabled="true"
                android:scrollbars="none" >
            </ListView>
        </LinearLayout>
        <View
            style="@style/seperator"/>
    </LinearLayout>
</LinearLayout>
