<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/common_distance_level_1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/financial_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2015-06-16"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"/>

        <TextView
            android:id="@+id/financial_detail_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="买入 考拉理财2号-稳健型"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/financial_detail_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        tools:text="20.00"
        android:textSize="@dimen/big_text_size"/>
</RelativeLayout>
