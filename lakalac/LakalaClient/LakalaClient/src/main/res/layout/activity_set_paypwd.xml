<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/set_password_hint"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginTop="@dimen/common_distance_level_2"
        android:textColor="@color/combination_textview_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_distance_level_2"
            android:background="@drawable/pay_pwd_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:src="@drawable/modify_paypwd_shape"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="@color/blue_main_color"/>
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:src="@drawable/modify_paypwd_shape"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="@color/blue_main_color"/>
            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:src="@drawable/modify_paypwd_shape"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="@color/blue_main_color"/>
            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:src="@drawable/modify_paypwd_shape"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="@color/blue_main_color"/>
            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:src="@drawable/modify_paypwd_shape"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="@color/blue_main_color"/>
            <ImageView
                android:id="@+id/iv_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:src="@drawable/modify_paypwd_shape"/>
        </LinearLayout>

        <include
            android:id="@+id/include2"
            layout="@layout/shoudan_btnwithtopline_comment"/>
    </LinearLayout>
</LinearLayout>