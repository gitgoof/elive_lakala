<?xml version="1.0" encoding="utf-8"?>
<!-- 我要提款页面 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:apps="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/view_group"
                android:background="@color/gray"
                android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignWithParentIfMissing="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_margin_actionbar"
                android:layout_marginBottom="8dp"
                style="@style/combination_little_title_style"
                android:text="提款信息" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/order_item_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_tag2"
                    style="@style/combination_left_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/combination_text_edit_margin_left"
                    android:text="提款金额(元)" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >
                    <EditText
                        android:layout_width="fill_parent"
                        android:id="@+id/input_amount"
                        android:layout_height="fill_parent"
                        android:background="@color/transparence"
                        android:gravity="right|center_vertical"
                        android:hint="请输入提款金额"
                        android:inputType="numberDecimal"
                        style="@style/combination_right_edittext_style"
                        android:singleLine="true"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        android:layout_toLeftOf="@+id/view"
                        />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/amount_tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                tools:text="lslsl"
                style="@style/combination_little_title_style"
                android:textColor="@color/disable_btn_text_color"/>
            <TextView
                android:id="@+id/limit_tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:text="sljdksgl"
                style="@style/combination_little_title_style"
                android:textColor="@color/disable_btn_text_color"/>
            <TextView
                android:id="@+id/next_draw_money"
                style="@style/btn_top_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="下一步" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/layout_keyboard" />
    </RelativeLayout>

</RelativeLayout>