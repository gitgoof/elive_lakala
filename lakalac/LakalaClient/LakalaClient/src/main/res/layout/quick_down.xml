<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/u11_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <TextView
            android:layout_marginRight="8dp"
            android:textSize="14sp"
            android:textColor="@color/font_gray_three2"
            android:text="单日磁条贷记卡额度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_question"
            android:src="@drawable/btn_details_sel"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/u11_line"/>
    <LinearLayout
        android:id="@+id/ll_go"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/ll_swi"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:id="@+id/tv_e"
            android:text="50000.00元"
            android:textSize="14sp"
            android:textColor="@color/font_gray_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="right"
            android:textColor="@color/font_gray_one2"
            android:text="点此有惊喜"
            />
        <ImageView
            android:id="@+id/iv_right"
            android:src="@drawable/right"
            android:layout_width="28dp"
            android:layout_gravity="center_vertical"
            android:layout_height="28dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/u11_line"/>
</LinearLayout>