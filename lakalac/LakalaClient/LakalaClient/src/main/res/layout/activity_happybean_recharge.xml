<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/app_background_white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lakala_pay"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/ui_margin_30"
        />
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="¥100.00"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_size_large"
        />

    <LinearLayout
        android:id="@+id/ll_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/common_distance_level_1"
        android:layout_marginTop="@dimen/common_distance_level_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款方"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1.0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网易产品"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/common_distance_level_1"
        android:id="@+id/ll_recharge_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/common_distance_level_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值方式"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1.0"/>
        <TextView
            android:id="@+id/tv_buy_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择充值方式"/>
        <TextView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:layout_marginLeft="@dimen/common_distance_level_1"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_pay"
        style="@style/btn_top_line"
        android:text="@string/pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        />
</LinearLayout>
