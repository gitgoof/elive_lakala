<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/app_background_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_go_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_exchange"
            android:layout_marginLeft="@dimen/common_distance_level_1"
            android:layout_marginTop="@dimen/margin_size_small"
            android:layout_marginBottom="@dimen/margin_size_small"
            style="@style/text_style_ten_blue"
           />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_business_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business_description"
            android:layout_marginRight="@dimen/common_distance_level_1"
            android:layout_marginTop="@dimen/margin_size_small"
            android:layout_marginBottom="@dimen/margin_size_small"
            style="@style/text_style_ten_blue"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/coupon_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:groupIndicator="@null"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_marginLeft="@dimen/common_distance_level_1"
        android:layout_marginRight="@dimen/common_distance_level_1"
        android:dividerHeight="@dimen/eightdip"
        android:divider="@color/bg_main_gray_color"
        android:listSelector="#00000000"
        />
    <include
        android:id="@+id/layout_empty"
        layout="@layout/empry_view_layout"
        />
</LinearLayout>
