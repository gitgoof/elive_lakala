<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/business_description_text_style"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="基本商户信息"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/combination_textview_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TableLayout
                android:background="@color/white"
                android:paddingLeft="@dimen/combination_text_edit_margin_left"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        style="@style/combination_left_textview_style"
                        android:layout_height="match_parent"
                        android:text="商户名称"/>

                    <TextView
                        android:id="@+id/tv_merchant_name"
                        style="@style/barcode_right_text_style"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        tools:text="呵呵" />

                </TableRow>

                <View
                    style="@style/seperator" />

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        style="@style/combination_left_textview_style"
                        android:layout_height="match_parent"
                        android:text="商户地址" />

                    <TextView
                        android:id="@+id/tv_merchant_address"
                        style="@style/barcode_right_text_style"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        tools:text="呵呵" />


                </TableRow>


                <View
                    style="@style/seperator" />

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        style="@style/combination_left_textview_style"
                        android:layout_height="match_parent"
                        android:text="法人名称" />

                    <TextView
                        android:id="@+id/tv_real_name"
                        style="@style/barcode_right_text_style"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        tools:text="李总" />

                </TableRow>

                <View
                    style="@style/seperator" />

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        style="@style/combination_left_textview_style"
                        android:layout_height="match_parent"
                        android:text="身份证号" />

                    <TextView
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:id="@+id/tv_id_card_number"
                        style="@style/barcode_right_text_style"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        tools:text="350428199309254519" />

                </TableRow>

                <View
                    style="@style/seperator" />

                <TableRow android:minHeight="@dimen/order_item_height">


                    <TextView
                        style="@style/combination_left_textview_style"
                        android:layout_height="match_parent"
                        android:text="收款银行" />

                    <TextView
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:id="@+id/tv_collection_bank"
                        style="@style/barcode_right_text_style"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        tools:text="中国工商银行" />

                </TableRow>

                <View
                    style="@style/seperator" />

                <TableRow
                    android:minHeight="@dimen/order_item_height">

                    <TextView
                        style="@style/combination_left_textview_style"
                        android:layout_height="match_parent"
                        android:text="收款卡号" />

                    <TextView
                        android:inputType="textEmailAddress"
                        android:id="@+id/tv_collection_card_number"
                        style="@style/barcode_right_text_style"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/combination_text_edit_margin_left"
                        tools:text="6228 48 **** 9714" />

                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <CheckBox
                    android:checked="true"
                    android:id="@+id/agreement"
                    style="@style/mycheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读并同意"
                    android:textColor="@color/combination_title_text_color"
                    android:textSize="@dimen/small_text_size"
                    android:drawablePadding="1dp"
                    android:paddingRight="1dp" />

                <TextView
                    android:textColor="@color/main_text_color"
                    android:text="@string/lkl_protocol_barcode_collection_protocol_underline"
                    android:id="@+id/barcode_collection_protocol"
                    android:textSize="@dimen/small_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                style="@style/btn_top_line"
                android:text="确认申请"
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
