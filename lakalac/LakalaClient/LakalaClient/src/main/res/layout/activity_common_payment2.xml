<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              style="@style/app_background_white">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/font_gray_two"
                android:textSize="14sp"
                android:text="银行卡连接刷卡器后，会自动获取您的银行卡号"
                />
            <TextView
                android:visibility="gone"
                android:paddingTop="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_20"
                android:textColor="@color/gray_666666"
                android:id="@+id/sec_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.lakala.shoudan.component.VerticalListView
                android:id="@+id/confirm_info"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/color_gray_EFEFEF"
                android:padding="@dimen/dimen_20"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:singleLine="true"
                    android:id="@+id/prompt"
                    android:layout_gravity="center_vertical"
                    android:text="@string/search_device"
                    android:textColor="@color/gray_666666"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:layout_gravity="center_vertical"
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/tips_image"
                    android:src="@drawable/lakala_connect2"
                    android:layout_margin="@dimen/dimen_30"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_400"/>

                <TextView
                    android:id="@+id/bottom_tips"
                    android:text="@string/bottom_tips"
                    android:padding="@dimen/dimen_20"
                    style="@style/lakala_shoudan_text_medium_orange"
                    android:textSize="@dimen/font_size_small"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>


                <!--<TextView-->
                    <!--android:id="@+id/buy_lakala_swip"-->
                    <!--style="@style/shoudan_text_medium_black"-->
                    <!--android:textSize="@dimen/font_size_small"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_gravity="bottom|right"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:clickable="true"-->
                    <!--android:visibility="gone"-->
                    <!--android:text="@string/buy_lakala_swip"-->
                    <!--android:textColor="@color/blue_main_color"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_20"
                android:visibility="gone"
                android:id="@+id/failed_layout"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/failed_reason"
                    style="@style/lakala_shoudan_text_medium_orange"
                    android:textSize="@dimen/font_size_small"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_80"
                    tools:text="失败"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/btn_comment_with_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/back_to_main"
                        android:id="@+id/goback_app"
                        android:layout_marginTop="@dimen/dimen_40"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/btn_top_line"
                        android:id="@+id/re_swip"
                        android:layout_weight="1"
                        android:text="继续交易"
                        android:layout_marginTop="@dimen/dimen_40"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>