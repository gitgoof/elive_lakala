<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    style="@style/app_background_white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_marginTop="@dimen/content_margin_actionbar"
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/combination_text_edit_margin_left"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前密码"
                style="@style/combination_left_textview_style"
                />
            <EditText
                android:id="@+id/edit_old_psw"
                style="@style/combination_right_edittext_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginRight="@dimen/combination_text_edit_margin_left"
                android:hint="请输入当前账号密码"
                android:background="@color/white"
                android:inputType="textPassword"
                />
        </LinearLayout>

        <View style="@style/seperator"/>

       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新密码"
                style="@style/combination_left_textview_style"
                />
            <EditText
                android:id="@+id/edit_new_psw1"
                style="@style/combination_right_edittext_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请输入新密码"
                android:layout_marginRight="@dimen/combination_text_edit_margin_left"
                android:background="@color/white"
                 android:inputType="textPassword"
                />
        </LinearLayout>
        <View style="@style/seperator"/>

         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确认新密码"
                style="@style/combination_left_textview_style"
                />
            <EditText
                android:paddingLeft="10dp"
                android:id="@+id/edit_new_psw2"
                style="@style/combination_right_edittext_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请输入新密码"
                android:layout_marginRight="@dimen/combination_text_edit_margin_left"
                android:background="@color/white"
                 android:inputType="textPassword"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            style="@style/combination_little_title_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="0dp"
            android:text="@string/password_new_prompt" />

        <!-- <Button -->
        <!-- android:id="@+id/post_btn" -->
        <!-- style="@style/shoudan_common_btn_style" -->
        <!-- android:layout_marginTop="10dip" -->
        <!-- android:text="" /> -->

        <TextView
            android:id="@+id/post_btn"
            style="@style/btn_top_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="完成" />
    </LinearLayout>

</LinearLayout>