<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:apps="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              style="@style/app_background_white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin_actionbar"
        style="@style/combination_little_title_style"
        tools:text="买入考拉理财2号"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/common_distance_level_1"
        android:paddingBottom="@dimen/common_distance_level_1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/combination_left_textview_style"
                android:paddingLeft="@dimen/combination_text_edit_margin_left"
                android:text="买入金额(元)"/>
            <TextView
                android:id="@+id/et_transerin_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/combination_right_edittext_style"
                android:paddingRight="@dimen/combination_text_edit_margin_left"
                tools:text="10000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="@dimen/common_distance_level_1"
            android:layout_gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/combination_left_textview_style"
                android:text="预期收益(元)："/>
            <TextView
                android:id="@+id/tv_predict_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/amount_color"
                android:text="28.77"
                android:paddingRight="@dimen/combination_text_edit_margin_left"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tips1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/combination_little_title_style"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="0dp"
        tools:text="预计5月22日产生收益，5月24日可查看收益"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_item_height"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common_distance_level_2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/combination_left_textview_style"
            android:text="买入方式"
            android:paddingLeft="@dimen/combination_text_edit_margin_left"/>
        <TextView
            android:id="@+id/tv_transerin_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/combination_text_edit_margin_left"
            android:hint="请选择支付方式"
            style="@style/combination_right_edittext_style"
            tools:text="招商银行 储蓄卡(8536)"
            android:drawablePadding="@dimen/combination_text_edit_margin_left"
            android:drawableRight="@drawable/btn_arrow_go"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/combination_little_title_style"
            android:layout_marginBottom="0dp"
            android:text="买入限额：点击查看"/>
        <TextView
            android:id="@+id/tv_agreement1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/combination_little_title_style"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/common_blue_color"
            android:text="《签约卡支付限额签约表》"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_agreement2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cbox_agreement2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mycheckbox"
            android:textSize="@dimen/small_text_size"
            android:drawablePadding="1dp"
            android:checked="true"
            android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
            android:textColor="@color/combination_title_text_color"
            android:text="同意"/>
        <TextView
            android:id="@+id/tv_agreement2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/combination_little_title_style"
            android:layout_marginLeft="0dp"
            android:textColor="@color/blue_main_color"
            android:text="《建信基金管理公司网上交易协议》"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_agreement3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cbox_agreement3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mycheckbox"
            android:textSize="@dimen/small_text_size"
            android:drawablePadding="1dp"
            android:checked="true"
            android:layout_marginLeft="@dimen/combination_text_edit_margin_left"
            android:textColor="@color/combination_title_text_color"
            android:text="同意"/>
        <TextView
            android:id="@+id/tv_agreement3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/combination_little_title_style"
            android:layout_marginLeft="0dp"
            android:textColor="@color/blue_main_color"
            android:text="《拉卡拉赚点钱服务协议》"/>
    </LinearLayout>

    <TextView
        android:id="@+id/transerIn"
        style="@style/btn_top_line"
        android:layout_marginBottom="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="买入"
        />
</LinearLayout>