<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/combination_text_edit_margin_left"
              android:paddingRight="@dimen/combination_text_edit_margin_left"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        tools:src="@drawable/btn_arrow_go_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/pic_ad_background_selector"
        android:paddingLeft="33dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="双旦开心刷"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/adv1_title_color"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/adv1_content_color"
            tools:text="圣诞元旦收款刷够2万元，送理财"/>
    </LinearLayout>
</LinearLayout>