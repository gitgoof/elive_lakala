<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/app_background_white"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <View
            style="@style/seperator" />

        <TextView
            android:id="@+id/tv_purchase"
            style="@style/text_style_fourteen_blue_clic"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="买入" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relayout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_blue_color">
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/common_distance_level_1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="考拉1号"/>
                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/order_next_btn_margin_horizontal"
                    android:layout_marginLeft="@dimen/common_distance_level_1"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/white"
                    android:text="每百元预期收益(元)"
                    android:layout_below="@id/tv_product_name"/>
                <ImageView
                    android:id="@+id/image_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic_regular"
                    android:layout_toRightOf="@id/tv_product_name"
                    android:layout_marginLeft="@dimen/common_distance_level_1"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_predict_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_padding"
                    android:layout_marginLeft="@dimen/common_distance_level_1"
                    android:textSize="@dimen/super_super_text_size"
                    android:textColor="@color/white"
                    android:text="8.50"
                    android:layout_below="@id/tv_01"
                    android:layout_marginBottom="@dimen/order_next_btn_margin_horizontal"
                    />
                <TextView
                    android:id="@+id/tv_business_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/order_next_btn_margin_horizontal"
                    android:layout_marginLeft="@dimen/common_distance_level_1"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:text="@string/business_description"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/order_next_btn_margin_horizontal"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品期次"
                            style="@style/text_style_twelve_title"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:id="@+id/tv_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1153"
                            style="@style/style_sixteen_gray"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预期年化收益(%)"
                            style="@style/text_style_twelve_title"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:id="@+id/tv_expected_annual_yield"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.50"
                            style="@style/style_sixteen_gray"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起息日"
                            style="@style/text_style_twelve_title"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:id="@+id/tv_starttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-10-09"
                            style="@style/style_sixteen_gray"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            android:layout_marginBottom="@dimen/common_distance_level_1"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品期限(天)"
                            style="@style/text_style_twelve_title"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:id="@+id/tv_limittime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="365"
                            style="@style/style_sixteen_gray"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起购金额(元)"
                            style="@style/text_style_twelve_title"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:id="@+id/tv_startamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            style="@style/style_sixteen_gray"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到息日"
                            style="@style/text_style_twelve_title"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:id="@+id/tv_endtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016-10-09"
                            style="@style/style_sixteen_gray"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            android:layout_marginLeft="@dimen/common_distance_level_1"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    style="@style/seperator"/>
                <TextView
                    android:id="@+id/tv_txt_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考拉理财1号-进取型"
                    style="@style/text_style_twelve_title"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/common_distance_level_1"
                    android:layout_marginBottom="8dp"
                    />
                <View
                    style="@style/seperator"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买入金额"
                        style="@style/style_fourteen_gray"
                        android:layout_marginTop="@dimen/common_distance_level_1"
                        android:layout_marginLeft="@dimen/common_distance_level_1"
                        android:layout_marginBottom="@dimen/common_distance_level_1"
                        />
                    <EditText
                        android:hint="请输入金额"
                        android:id="@+id/et_price"
                        style="@style/combination_right_edittext_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text_size"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="@dimen/common_distance_level_1"
                        android:layout_marginLeft="@dimen/common_distance_level_1"
                        android:background="@color/white"
                        android:layout_toRightOf="@id/tv_price"
                        android:layout_marginRight="@dimen/common_distance_level_1"/>
                    <LinearLayout
                        android:id="@+id/ll_predict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/et_price"
                        android:visibility="invisible">
                        <TextView
                            android:id="@+id/tv_predict_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预期收益(元)"
                            style="@style/text_style_twelve_gray"
                            android:layout_marginTop="@dimen/common_distance_level_1"
                            />
                        <TextView
                            android:id="@+id/tv_predict"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/style_fourteen_amount"
                            android:layout_margin="@dimen/common_distance_level_1"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/et_price"
                            />

                    </LinearLayout>
                </RelativeLayout>
                <View
                    style="@style/seperator"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_distance_level_2"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
