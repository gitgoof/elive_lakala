<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true" android:drawable="@drawable/btn_topline_pressed"></item>
    <item android:state_pressed="true" android:drawable="@drawable/btn_topline_pressed"></item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4dp"/>
            <stroke android:color="@color/disable_btn_bg"/>
            <solid android:color="@color/bg_main_gray_color"/>
        </shape>
    </item>
    <item >
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/bg_main_gray_color"/>
            <stroke android:color="@color/btn_common_color" android:width="1dp"></stroke>
        </shape>
    </item>

</selector>
